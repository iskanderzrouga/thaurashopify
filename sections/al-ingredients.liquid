{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="section-{{ section.id }}-padding px-[15px] {% if section.settings.top_border %} rounded-t-[30px]  -mt-[30px] relative {% endif %}"
  style="background-color: {{ section.settings.bgcolor }}"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-[30px] md:gap-[80px] w-full">
      <div class="bg-[#FFFFFA] rounded-[20px] border border-[#FE6901] px-4 py-10 flex flex-col items-center justify-center gap-[30px] md:gap-[50px] w-full">
        <div class="flex flex-col items-center justify-center gap-[10px] text-center max-w-[1000px] mx-auto">
          {% if section.settings.heading != blank %}
            <h2
              class="text-[36px] md:text-[50px] font-semibold text-[#FE6901] !leading-tight"
              style="color: {{section.settings.color_primary}}"
            >
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.settings.description != blank %}
            <div
              class="text-[17px] md:text-[20px] font-normal !leading-[1.5] text-[#212537]"
              style="color: {{section.settings.color_secondary}}"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>

        {% if section.blocks.size > 0 %}
          <div class="grid grid-cols-2 md:grid-cols-6 gap-x-4 gap-y-6">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div>
                    <div class="flex flex-col items-center justify-center gap-[15px] text-center max-w-[170px] mx-auto">
                      {% if block.settings.image != blank %}
                        {{ block.settings.image | image_url: width: 100 | image_tag: class: 'w-full max-w-[80px] md:max-w-[100px]' }}
                      {% endif %}

                      {% if block.settings.heading != blank %}
                        <div
                          class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#212537]"
                          style="color: {{section.settings.color_tertiary}}"
                        >
                          {{ block.settings.heading }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto md:min-w-[500px]">
          {% render 'new-button', section: section %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "AL Ingredients",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_type",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "tertiary",
          "label": "Tertiary"
        }
      ],
      "default": "primary",
      "label": "Button Type"
    },
    {
      "type": "checkbox",
      "id": "top_border",
      "label": "Top Border",
      "default": false
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "color_primary",
      "label": "Primary Color",
      "default": "#FE6901"
    },
    {
      "type": "color",
      "id": "color_secondary",
      "label": "Secondary Color",
      "default": "#00176B"
    },
    {
      "type": "color",
      "id": "color_tertiary",
      "label": "Tertiary Color",
      "default": "#212537"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "AL Ingredients"
    }
  ]
}
{% endschema %}
