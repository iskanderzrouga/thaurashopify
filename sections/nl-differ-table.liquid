{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style=""
>
  {% if section.settings.bg_image != blank %}
    {{
      section.settings.bg_image
      | image_url: width: 1920
      | image_tag: class: 'w-full h-full object-cover absolute top-0 left-0', sizes: '1920px'
    }}
  {% endif %}

  <div
    class="mx-auto w-full relative rounded-[16px] px-4 md:px-5 py-5 md:py-12"
    style="max-width: {{ section.settings.max_width }}px; background-color: {{ section.settings.bgcolor }}; background: linear-gradient(180deg, #FFFFFF 0%, #D0D0D0 100%);"
  >
    {% if section.settings.deco_image != blank %}
      {{
        section.settings.deco_image
        | image_url: width: 1140
        | image_tag: class: 'w-full h-[180px] object-cover absolute bottom-0 left-0 rounded-b-[16px]', sizes: '1140px'
      }}
    {% endif %}

    <div class="flex flex-col items-center justify-center gap-6 md:gap-12 relative">
      <div class="flex flex-col gap-4 md:gap-10 max-w-[1000px] mx-auto">
        {% if section.settings.heading != blank %}
          <h2
            class="text-[26px] md:text-[36px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[16px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <div
            class="text-[20px] md:text-[24px] font-bold !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.subheading }}
          </div>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="grid grid-cols-3 border border-[#AAAAAA] gap-[1px] bg-[#AAAAAA] rounded-[16px]">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'row' %}
                {% if block.settings.description1 != blank %}
                  <div
                    class="py-3 px-1 md:px-3 {% if block.settings.header %} text-[16px] md:text-[24px] font-bold  {% else %} text-[14px] md:text-[22px] font-bold  {% endif %} text-center !leading-tight text-[#000] {% if block.settings.header %} rounded-tl-[16px] {% endif %} {% if block.settings.last %} rounded-bl-[16px] {% endif %}"
                    style="color: {{ block.settings.color1 }}; background-color: {{ block.settings.bgcolor1 }};"
                  >
                    {{ block.settings.description1 }}
                  </div>
                {% endif %}
                {% if block.settings.description2 != blank %}
                  <div
                    class="py-3 px-1 md:px-3 {% if block.settings.header %} text-[16px] md:text-[24px] font-bold {% else %} text-[13px] md:text-[18px] font-medium {% endif %} text-center !leading-tight text-[#000]"
                    style="color: {{ block.settings.color2 }}; background-color: {{ block.settings.bgcolor2 }};"
                  >
                    {{ block.settings.description2 }}
                  </div>
                {% endif %}
                {% if block.settings.description3 != blank %}
                  <div
                    class="py-3 px-1 md:px-3 {% if block.settings.header %} text-[16px] md:text-[24px] font-bold {% else %} text-[13px] md:text-[18px] font-medium {% endif %} text-center !leading-tight text-[#000] {% if block.settings.header %} rounded-tr-[16px] {% endif %} {% if block.settings.last %} rounded-br-[16px] {% endif %}"
                    style="color: {{ block.settings.color3 }}; background-color: {{ block.settings.bgcolor3 }};"
                  >
                    {{ block.settings.description3 }}
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      <div class="grid md:grid-cols-3 gap-6 md:gap-10 items-center">
        {% assign max_width = section.settings.max_width | divided_by: 2 %}
        {% assign max_width_px = max_width | append: 'px' %}
        {% if section.settings.image != blank %}
          <div class="hidden md:flex items-center justify-center">
            {{
              section.settings.image
              | image_url: width: max_width
              | image_tag: class: 'w-full section-main-image max-w-[140px] md:max-w-[280px]', sizes: max_width_px
            }}
          </div>
        {% endif %}

        <div class="flex flex-col gap-4 md:gap-8 md:col-span-2">
          {% if section.settings.p_heading != blank %}
            <h2
              class="text-[24px] md:text-[36px] font-bold !leading-tight text-[#333333]"
            >
              {{ section.settings.p_heading }}
            </h2>
          {% endif %}

          {% if section.settings.p_description != blank %}
            <div
              class="text-[16px] md:text-[20px] font-normal !leading-[1.5] text-[#252726]"
            >
              {{ section.settings.p_description }}
            </div>
          {% endif %}
          {% if section.settings.button_label != blank %}
            <div class="w-full md:w-fit flex flex-col items-center gap-4">
              <a
                href="{{ section.settings.button_url }}"
                class="new-button--primary"
              >
                {{ section.settings.button_label }}
                {%- render 'icon-arrow-right' -%}
              </a>

              {% if section.settings.product_bottom_text != blank %}
                <div class="flex items-center gap-2 relative w-fit mx-auto">
                  {% if section.settings.bottom_label_icon != blank %}
                    {{
                      section.settings.bottom_label_icon
                      | image_url: width: 24
                      | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
                    }}
                  {% endif %}

                  <div
                    class="text-[12px] md:text-[15px] text-[#252726] font-normal !leading-tight"
                    style="color: {{ section.settings.text_color }};"
                  >
                    {{ section.settings.product_bottom_text }}
                  </div>
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "NL Differ Table",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "deco_image",
      "label": "Deco Image"
    },

    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "checkbox",
      "id": "heading_m_center",
      "label": "Heading Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "heading_d_center",
      "label": "Heading Desktop Center",
      "default": true
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "description_m_center",
      "label": "Description Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "description_d_center",
      "label": "Description Desktop Center",
      "default": false
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "p_heading",
      "label": "Product Heading"
    },
    {
      "type": "richtext",
      "id": "p_description",
      "label": "Product Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "bottom_label_icon",
      "label": "Bottom Label Icon"
    },
    {
      "type": "richtext",
      "id": "product_bottom_text",
      "label": "Product Bottom Text"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "checkbox",
          "id": "header",
          "label": "Header",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "last",
          "label": "Last",
          "default": false
        },
        {
          "type": "richtext",
          "id": "description1",
          "label": "Description 1"
        },
        {
          "type": "color",
          "id": "color1",
          "label": "Color 1",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "bgcolor1",
          "label": "Background Color 1",
          "default": "#ffffff"
        },
        {
          "type": "richtext",
          "id": "description2",
          "label": "Description 2"
        },
        {
          "type": "color",
          "id": "color2",
          "label": "Color 2",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "bgcolor2",
          "label": "Background Color 2",
          "default": "#ffffff"
        },
        {
          "type": "richtext",
          "id": "description3",
          "label": "Description 3"
        },
        {
          "type": "color",
          "id": "color3",
          "label": "Color 3",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "bgcolor3",
          "label": "Background Color 3",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NL Differ Table"
    }
  ]
}
{% endschema %}
