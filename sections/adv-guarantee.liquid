<div class="adv-guarantee-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-guarantee-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="adv-guarantee-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div class="adv-guarantee-grid adv-mobile-{{ section.settings.mobile_layout }}">
        
        {%- comment -%} Badge Column {%- endcomment -%}
        <div class="adv-guarantee-badge-column">
          {%- if section.settings.badge_image -%}
            <div class="adv-guarantee-badge">
              <img
                src="{{ section.settings.badge_image | image_url: width: 800 }}"
                alt="{{ section.settings.badge_alt }}"
                loading="lazy"
              >
            </div>
          {%- elsif section.settings.show_default_badge -%}
            <div class="adv-guarantee-badge adv-default-badge">
              <svg class="adv-badge-circle" viewBox="0 0 380 380">
                <circle cx="190" cy="190" r="190" fill="{{ section.settings.badge_bg_color }}" />
                <circle cx="190" cy="190" r="162" fill="none" stroke="{{ section.settings.badge_stroke_color }}" stroke-width="4" stroke-dasharray="6 6" />
              </svg>
              <div class="adv-badge-content">
                <span class="adv-badge-number">{{ section.settings.badge_number }}</span>
                <span class="adv-badge-text-top">{{ section.settings.badge_text_top }}</span>
                <span class="adv-badge-text-bottom">{{ section.settings.badge_text_bottom }}</span>
              </div>
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Content Column {%- endcomment -%}
        <div class="adv-guarantee-content-column">
          
          {%- if section.settings.intro_text != blank -%}
            <div class="adv-guarantee-intro">
              {{ section.settings.intro_text }}
            </div>
          {%- endif -%}

          {%- if section.settings.main_text != blank -%}
            <div class="adv-guarantee-main">
              {{ section.settings.main_text }}
            </div>
          {%- endif -%}

        </div>

      </div>

      {%- comment -%} Expectations Section {%- endcomment -%}
      {%- if section.settings.show_expectations and section.blocks.size > 0 -%}
        <div class="adv-guarantee-expectations">
          
          {%- if section.settings.expectations_heading != blank -%}
            <h3 class="adv-expectations-heading">{{ section.settings.expectations_heading }}</h3>
          {%- endif -%}

          <div class="adv-expectations-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'expectation' -%}
                <div class="adv-expectation-item" {{ block.shopify_attributes }}>
                  <div class="adv-expectation-badge">
                    <span>{{ block.settings.week_label }}</span>
                  </div>
                  <p class="adv-expectation-text">{{ block.settings.description }}</p>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>

          {%- if section.settings.expectations_image -%}
            <div class="adv-expectations-image">
              <img
                src="{{ section.settings.expectations_image | image_url: width: 800 }}"
                alt="{{ section.settings.expectations_heading }}"
                loading="lazy"
              >
            </div>
          {%- endif -%}

        </div>
      {%- endif -%}

      {%- comment -%} Bottom Text {%- endcomment -%}
      {%- if section.settings.bottom_text != blank -%}
        <div class="adv-guarantee-bottom">
          {{ section.settings.bottom_text }}
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-guarantee-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-guarantee-inner {
    margin: 0 auto;
  }

  .adv-guarantee-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    text-align: {{ section.settings.heading_alignment }};
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-guarantee-grid {
    display: grid;
    grid-template-columns: {{ section.settings.badge_width }}% 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
    margin-bottom: {{ section.settings.grid_margin }}px;
  }

  .adv-guarantee-badge {
    max-width: {{ section.settings.badge_max_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .adv-guarantee-badge img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Default Badge Styles */
  .adv-default-badge {
    aspect-ratio: 1;
    position: relative;
  }

  .adv-badge-circle {
    width: 100%;
    height: 100%;
  }

  .adv-badge-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 80%;
  }

  .adv-badge-number {
    display: block;
    font-size: {{ section.settings.badge_number_size }}px;
    font-weight: 800;
    color: {{ section.settings.badge_text_color }};
    line-height: 1;
    margin-bottom: 8px;
  }

  .adv-badge-text-top,
  .adv-badge-text-bottom {
    display: block;
    font-size: {{ section.settings.badge_text_size }}px;
    font-weight: 700;
    color: {{ section.settings.badge_text_color }};
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .adv-guarantee-intro {
    font-size: {{ section.settings.intro_size }}px;
    line-height: 1.4;
    color: {{ section.settings.intro_color }};
    margin-bottom: {{ section.settings.intro_margin }}px;
    font-weight: 600;
  }

  .adv-guarantee-main {
    font-size: {{ section.settings.text_size }}px;
    line-height: {{ section.settings.line_height }};
    color: {{ section.settings.text_color }};
  }

  /* Expectations */
  .adv-guarantee-expectations {
    display: grid;
    grid-template-columns: 1fr {{ section.settings.expectations_image_width }}%;
    gap: {{ section.settings.expectations_gap }}px;
    align-items: flex-start;
    margin-top: {{ section.settings.expectations_margin }}px;
  }

  .adv-expectations-heading {
    font-size: {{ section.settings.expectations_heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.expectations_heading_margin }}px;
    font-weight: 600;
  }

  .adv-expectations-list {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.expectations_item_gap }}px;
  }

  .adv-expectation-item {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .adv-expectation-badge {
    background: {{ section.settings.expectation_badge_bg }};
    border: {{ section.settings.expectation_badge_border }}px solid {{ section.settings.expectation_badge_border_color }};
    border-radius: {{ section.settings.expectation_badge_radius }}px;
    padding: {{ section.settings.expectation_badge_padding }}px;
    display: inline-flex;
    align-self: flex-start;
  }

  .adv-expectation-badge span {
    font-size: {{ section.settings.expectation_badge_size }}px;
    font-weight: 700;
    color: {{ section.settings.expectation_badge_color }};
  }

  .adv-expectation-text {
    font-size: {{ section.settings.expectation_text_size }}px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .adv-expectations-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_radius }}px;
  }

  .adv-guarantee-bottom {
    font-size: {{ section.settings.bottom_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin-top: {{ section.settings.bottom_margin }}px;
  }

  @media screen and (max-width: 989px) {
    .adv-guarantee-expectations {
      grid-template-columns: 1fr 45%;
    }
  }

  @media screen and (max-width: 749px) {
    .adv-guarantee-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-guarantee-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .adv-mobile-stack .adv-guarantee-grid {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .adv-guarantee-badge {
      max-width: {{ section.settings.mobile_badge_width }}px;
    }

    .adv-badge-number {
      font-size: {{ section.settings.mobile_badge_number_size }}px;
    }

    .adv-badge-text-top,
    .adv-badge-text-bottom {
      font-size: {{ section.settings.mobile_badge_text_size }}px;
    }

    .adv-guarantee-intro {
      font-size: {{ section.settings.mobile_intro_size }}px;
    }

    .adv-guarantee-main {
      font-size: {{ section.settings.mobile_text_size }}px;
