{{ 'section-adv-text-block.css' | asset_url | stylesheet_tag }}

<div class="adv-text-block-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-text-block-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="adv-text-block-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.content != blank -%}
        <div class="adv-text-block-content">
          {{ section.settings.content }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_button -%}
        <div class="adv-text-block-cta">
          <a 
            href="{{ section.settings.button_link }}" 
            class="adv-text-block-button"
            style="background: {{ section.settings.button_bg }}; color: {{ section.settings.button_color }};"
          >
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-text-block-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-text-block-inner {
    margin: 0 auto;
    text-align: {{ section.settings.text_alignment }};
    {%- if section.settings.show_box_style -%}
      padding: {{ section.settings.box_padding }}px;
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
      border-radius: {{ section.settings.border_radius }}px;
      background: {{ section.settings.box_background }};
    {%- endif -%}
  }

  .adv-text-block-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-text-block-content {
    font-size: {{ section.settings.text_size }}px;
    line-height: {{ section.settings.line_height }};
    color: {{ section.settings.text_color }};
  }

  .adv-text-block-content p {
    margin: 0 0 {{ section.settings.paragraph_spacing }}px;
  }

  .adv-text-block-content p:last-child {
    margin-bottom: 0;
  }

  .adv-text-block-content strong {
    font-weight: 600;
    color: {{ section.settings.highlight_color }};
  }

  .adv-text-block-content em {
    font-style: italic;
    color: {{ section.settings.text_color }};
  }

  .adv-text-block-cta {
    margin-top: {{ section.settings.button_margin }}px;
  }

  .adv-text-block-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_size }}px;
    font-weight: {{ section.settings.button_weight }};
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .adv-text-block-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .adv-text-block-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-text-block-inner {
      {%- if section.settings.show_box_style -%}
        padding: {{ section.settings.mobile_box_padding }}px;
      {%- endif -%}
    }

    .adv-text-block-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .adv-text-block-content {
      font-size: {{ section.settings.mobile_text_size }}px;
    }

    .adv-text-block-button {
      font-size: {{ section.settings.mobile_button_size }}px;
      padding: {{ section.settings.mobile_button_padding_y }}px {{ section.settings.mobile_button_padding_x }}px;
      {%- if section.settings.mobile_button_full_width -%}
        display: block;
        width: 100%;
      {%- endif -%}
    }
  }
</style>

