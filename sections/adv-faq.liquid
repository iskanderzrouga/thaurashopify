<div class="adv-faq-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-faq-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="adv-faq-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <div class="adv-faq-subheading">{{ section.settings.subheading }}</div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="adv-faq-list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'faq_item' -%}
              <details class="adv-faq-item" {{ block.shopify_attributes }} {% if block.settings.default_open %}open{% endif %}>
                <summary class="adv-faq-question">
                  <span class="adv-faq-question-text">{{ block.settings.question }}</span>
                  <span class="adv-faq-icon">
                    <svg class="icon-plus" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    <svg class="icon-minus" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </span>
                </summary>
                <div class="adv-faq-answer">
                  <div class="adv-faq-answer-content">
                    {{ block.settings.answer }}
                  </div>
                </div>
              </details>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_cta_button -%}
        <div class="adv-faq-cta">
          <a 
            href="{{ section.settings.cta_link }}" 
            class="adv-faq-button"
            style="background: {{ section.settings.button_bg }}; color: {{ section.settings.button_color }};"
          >
            {{ section.settings.cta_text }}
          </a>
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-faq-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-faq-inner {
    margin: 0 auto;
  }

  .adv-faq-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    text-align: {{ section.settings.text_alignment }};
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-faq-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    line-height: 1.5;
    color: {{ section.settings.subheading_color }};
    margin-bottom: {{ section.settings.subheading_margin }}px;
    text-align: {{ section.settings.text_alignment }};
  }

  .adv-faq-list {
    margin-bottom: {{ section.settings.list_margin }}px;
  }

  .adv-faq-item {
    border-bottom: {{ section.settings.divider_width }}px solid {{ section.settings.divider_color }};
  }

  .adv-faq-item:first-child {
    border-top: {{ section.settings.divider_width }}px solid {{ section.settings.divider_color }};
  }

  .adv-faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ section.settings.item_padding }}px 0;
    cursor: pointer;
    list-style: none;
    user-select: none;
    transition: color 0.3s ease;
  }

  .adv-faq-item[open] .adv-faq-question {
    color: {{ section.settings.question_color }};
  }

  .adv-faq-item.is-animating {
    pointer-events: none;
  }

  .adv-faq-question::-webkit-details-marker {
    display: none;
  }

  .adv-faq-question-text {
    font-size: {{ section.settings.question_size }}px;
    color: {{ section.settings.question_color }};
    font-weight: {{ section.settings.question_weight }};
    line-height: 1.4;
    padding-right: 20px;
  }

  .adv-faq-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    position: relative;
    color: {{ section.settings.icon_color }};
  }

  .adv-faq-icon svg {
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .adv-faq-icon .icon-minus {
    opacity: 0;
    transform: rotate(-90deg);
  }

  .adv-faq-item[open] .adv-faq-icon .icon-plus,
  .adv-faq-item.is-open .adv-faq-icon .icon-plus {
    opacity: 0;
    transform: rotate(90deg);
  }

  .adv-faq-item[open] .adv-faq-icon .icon-minus,
  .adv-faq-item.is-open .adv-faq-icon .icon-minus {
    opacity: 1;
    transform: rotate(0deg);
  }

  .adv-faq-item.is-closing .adv-faq-icon .icon-plus {
    opacity: 1;
    transform: rotate(0deg);
  }

  .adv-faq-item.is-closing .adv-faq-icon .icon-minus {
    opacity: 0;
    transform: rotate(-90deg);
  }

  .adv-faq-answer {
    font-size: {{ section.settings.answer_size }}px;
    line-height: {{ section.settings.answer_line_height }};
    color: {{ section.settings.answer_color }};
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    padding: 0;
    transform: translateY(-10px);
    transition: max-height 0.45s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.35s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.45s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .adv-faq-item.is-open .adv-faq-answer {
    max-height: 1500px;
    opacity: 1;
    padding: 0 0 {{ section.settings.item_padding }}px 0;
    transform: translateY(0);
  }

  .adv-faq-item.is-closing .adv-faq-answer {
    max-height: 0;
    opacity: 0;
    padding: 0;
    transform: translateY(-10px);
    transition: max-height 0.4s cubic-bezier(0.6, 0, 0.4, 1),
                opacity 0.3s cubic-bezier(0.6, 0, 0.4, 1),
                padding 0.4s cubic-bezier(0.6, 0, 0.4, 1),
                transform 0.3s cubic-bezier(0.6, 0, 0.4, 1);
  }

  .adv-faq-answer-content {
    overflow: visible;
  }

  .adv-faq-cta {
    text-align: center;
    margin-top: {{ section.settings.cta_margin }}px;
  }

  .adv-faq-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 70px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_size }}px;
    font-weight: {{ section.settings.button_weight }};
    border-radius: 10px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease-in-out, transform 0.1s ease-in-out;
    box-shadow: 0px 6px 0px 0px {{ section.settings.button_shadow }};
  }

  .adv-faq-button:hover {
    opacity: 0.8;
  }

  .adv-faq-button:active {
    transform: scale(0.95);
  }

  @media screen and (max-width: 749px) {
    .adv-faq-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-faq-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .adv-faq-subheading {
      font-size: {{ section.settings.mobile_subheading_size }}px;
    }

