      transform: none;
    }
  }
</style>

<script>
  // Advanced FAQ animations with full control
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.adv-faq-item');
    
    faqItems.forEach(item => {
      const summary = item.querySelector('.adv-faq-question');
      const answer = item.querySelector('.adv-faq-answer');
      
      // Set initial state based on 'open' attribute
      if (item.hasAttribute('open')) {
        item.classList.add('is-open');
      }
      
      // Handle click on summary
      summary.addEventListener('click', function(e) {
        e.preventDefault(); // Prevent default details behavior
        
        // Prevent multiple rapid clicks
        if (item.classList.contains('is-animating')) return;
        
        const isOpen = item.classList.contains('is-open');
        
        item.classList.add('is-animating');
        
        if (isOpen) {
          // Close animation
          item.classList.add('is-closing');
          item.classList.remove('is-open');
          
          // Remove 'open' attribute and classes after animation completes
          setTimeout(() => {
            item.removeAttribute('open');
            item.classList.remove('is-closing');
            item.classList.remove('is-animating');
          }, 450);
        } else {
          // Open animation
          item.setAttribute('open', '');
          item.classList.remove('is-closing');
          
          // Trigger reflow to ensure animation plays
          requestAnimationFrame(() => {
            requestAnimationFrame(() => {
              item.classList.add('is-open');
            });
          });
          
          // Smooth scroll and remove animating class after animation
          setTimeout(() => {
            item.classList.remove('is-animating');
            
            const rect = item.getBoundingClientRect();
            const isInView = rect.top >= 0 && rect.bottom <= window.innerHeight;
            
            if (!isInView) {
              item.scrollIntoView({ 
                behavior: 'smooth', 
                block: 'nearest',
                inline: 'nearest'
              });
            }
          }, 450);
        }
      });
    });
  });
</script>

