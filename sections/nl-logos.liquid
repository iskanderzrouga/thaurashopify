{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="{{ section.settings.section_id }}" class="section-{{ section.id }}-padding px-5" style="background-color: {{ section.settings.bgcolor }}">
  <div class="mx-auto w-full overflow-hidden" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-4">
      {% if section.settings.heading != blank %}
        <h2 class="text-center text-[17px] md:text-[20px] font-normal !leading-tight text-[#000]">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      <div class="p-logos-animation flex items-center justify-center">
        {% for i in (1..5) %}
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'logo' %}
                <div class="h-[80px] md:h-[50px] min-h-[80px] md:min-h-[50px] max-h-[80px] md:max-h-[50px] px-5 w-[200px] min-w-[200px] max-w-[200px] flex items-center justify-center">
                  {{
                    block.settings.image
                    | image_url: width: 400
                    | image_tag: class: 'w-auto h-full object-contain opacity-70', sizes: '400px'
                  }}
                </div>
            {% endcase %}
          {% endfor %}
        {% endfor %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto px-[10px]">
          {% if section.settings.cart_button %}
            {% liquid
              assign product = section.settings.product
              assign product_form_id = 'product-form-' | append: section.id
            %}
            {% render 'sk-add-to-cart-button', section: section, product_form_id: product_form_id, product: product %}
          {% else %}
            <a
              href="{{ section.settings.button_url }}"
              data-scroll-to-section
              class="new-button--secondary"
            >
              {{ section.settings.button_label }}
              {%- render 'icon-arrow-right' -%}
            </a>
          {% endif %}

          {% if section.settings.show_payment_icons %}
            <ul class="mt-5 flex items-center justify-center flex-wrap gap-2">
              {% render 'payment-icons', section_id: section.id %}
            </ul>
          {% endif %}

          {% if section.settings.bottom_description != blank %}
            <div class="flex items-center justify-center mt-4 gap-2 mx-auto">
              {% if section.settings.bottom_icon %}
                {{ section.settings.bottom_icon | image_url: width: 40 | image_tag: class: 'w-8', sizes: '40px' }}
              {% endif %}

              <div
                class="text-sm lg:text-base text-[#390B4D] font-medium !leading-normal"
              >
                {{ section.settings.bottom_description }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  /* .p-logos-animation {
    animation: PLogosAnimation 50s linear infinite;
    width: 4000px;
  }
  @keyframes PLogosAnimation {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-2000px);
    }
  } */
  @media screen and (max-width: 768px) {
    .p-logos-animation {
      animation: PLogosAnimation 50s linear infinite;
      width: 4000px;
    }
    @keyframes PLogosAnimation {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-2000px);
      }
    }
  }
</style>

{% schema %}
{
  "name": "NL Logos",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "checkbox",
      "id": "cart_button",
      "label": "Use Add to Cart Button",
      "default": false
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "bottom_icon",
      "label": "Bottom Icon"
    },
    {
      "type": "richtext",
      "id": "bottom_description",
      "label": "Bottom Description"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NL Logos"
    }
  ]
}
{% endschema %}
