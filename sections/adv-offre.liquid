      margin-top: {{ section.settings.mobile_features_margin_top }}px;
    }

    .adv-offre-feature-item {
      width: {{ section.settings.mobile_feature_width }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .adv-offre-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-offre-container {
      height: auto;
      min-height: 500px;
    }

    .adv-offre-headline {
      font-size: {{ section.settings.mobile_headline_size }}px;
    }

    .adv-offre-description {
      font-size: {{ section.settings.mobile_description_size }}px;
    }

    .adv-offre-button {
      font-size: {{ section.settings.mobile_button_size }}px;
