<div class="adv-offre-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-offre-container">
      
      {%- comment -%} Diagonal Stripe Border Top {%- endcomment -%}
      {%- if section.settings.stripe_image -%}
        <div class="adv-offre-stripe-top">
          <img
            src="{{ section.settings.stripe_image | image_url: width: 2000 }}"
            alt="Stripe decoration"
            class="adv-offre-stripe-image"
            loading="eager"
          >
        </div>
      {%- endif -%}

      <div class="adv-offre-inner">
        
        {%- comment -%} Product Image Section {%- endcomment -%}
        <div class="adv-offre-product">
          {%- if section.settings.product_image -%}
            <div class="adv-offre-product-shadow"></div>
            <img
              class="adv-offre-product-image"
              src="{{ section.settings.product_image | image_url: width: 800 }}"
              alt="{{ section.settings.product_image.alt | default: 'Product' }}"
              width="{{ section.settings.product_image.width }}"
              height="{{ section.settings.product_image.height }}"
              loading="lazy"
            >
          {%- endif -%}
        </div>

        {%- comment -%} Content Section {%- endcomment -%}
        <div class="adv-offre-content">
          
          <div class="adv-offre-content-inner">
            {%- if section.settings.headline != blank -%}
              <h2 class="adv-offre-headline">
                {%- assign headline_parts = section.settings.headline | split: '||' -%}
                {%- if headline_parts.size == 2 -%}
                  {{ headline_parts[0] }}
                  <span class="adv-offre-highlight">{{ headline_parts[1] }}</span>
                {%- else -%}
                  {{ section.settings.headline }}
                {%- endif -%}
              </h2>
            {%- endif -%}

            {%- if section.settings.description != blank -%}
              <p class="adv-offre-description">{{ section.settings.description }}</p>
            {%- endif -%}

            {%- comment -%} CTA Button & Deadline Container {%- endcomment -%}
            <div class="adv-offre-cta-container">
              {%- if section.settings.button_text != blank -%}
                <div class="adv-offre-button-wrapper">
                  <a 
                    href="{{ section.settings.button_link }}" 
                    class="adv-offre-button"
                    style="background: {{ section.settings.button_color }}; box-shadow: 0px 6px 0px 0px {{ section.settings.button_shadow_color }};"
                  >
                    {{ section.settings.button_text }}
                  </a>
                </div>
              {%- endif -%}

              {%- if section.settings.offer_deadline != blank -%}
                <p class="adv-offre-deadline">
                  {%- assign deadline_parts = section.settings.offer_deadline | split: '||' -%}
                  {%- if deadline_parts.size == 2 -%}
                    {{ deadline_parts[0] }}
                    <span class="adv-offre-deadline-highlight">{{ deadline_parts[1] }}</span>
                  {%- else -%}
                    {{ section.settings.offer_deadline }}
                  {%- endif -%}
                </p>
              {%- endif -%}
            </div>
          </div>

          {%- comment -%} Features Grid - Outside gap system {%- endcomment -%}
          {%- if section.blocks.size > 0 -%}
            <div class="adv-offre-features">
              {%- for block in section.blocks -%}
                <div class="adv-offre-feature-item" {{ block.shopify_attributes }}>
                  
                  {%- if block.settings.icon -%}
                    <div class="adv-offre-feature-icon-wrapper">
                      <div class="adv-offre-feature-icon-circle" style="background: {{ section.settings.icon_background }};">
                        <img
                          src="{{ block.settings.icon | image_url: width: 120 }}"
                          alt="{{ block.settings.title }}"
                          width="60"
                          height="60"
                          loading="lazy"
                          class="adv-offre-feature-icon"
                        >
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.title != blank -%}
                    <p class="adv-offre-feature-title">{{ block.settings.title }}</p>
                  {%- endif -%}

                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}

        </div>

      </div>

    </div>
  </div>
</div>

<style>
  .adv-offre-wrapper {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  .adv-offre-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    background: {{ section.settings.container_background }};
    border-radius: {{ section.settings.border_radius }}px;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    overflow: hidden;
    position: relative;
    height: 710px;
  }

  .adv-offre-stripe-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.stripe_height }}px;
    overflow: hidden;
    z-index: 2;
    pointer-events: none;
  }

  .adv-offre-stripe-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .adv-offre-inner {
    padding: {{ section.settings.inner_padding_top }}px {{ section.settings.inner_padding_horizontal }}px {{ section.settings.inner_padding_bottom }}px;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: {{ section.settings.content_gap }}px;
    position: relative;
    z-index: 1;
  }

  .adv-offre-product {
    position: relative;
    width: {{ section.settings.product_width }}px;
    flex-shrink: 0;
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .adv-offre-product-shadow {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 30%;
    background: {{ section.settings.shadow_color }};
    border-radius: 50%;
    filter: blur({{ section.settings.shadow_blur }}px);
    opacity: {{ section.settings.shadow_opacity }};
  }

  .adv-offre-product-image {
    position: relative;
    z-index: 1;
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 340.58 / 601.14;
    flex-shrink: 0;
  }

  .adv-offre-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: {{ section.settings.content_max_width }}px;
  }

  .adv-offre-content-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.content_spacing }}px;
    width: 100%;
  }

  .adv-offre-headline {
    font-family: 'Open Sans', sans-serif;
    font-size: {{ section.settings.headline_size }}px;
    line-height: {{ section.settings.headline_line_height }};
    color: {{ section.settings.headline_color }};
    font-weight: {{ section.settings.headline_weight }};
    margin: 0;
    text-align: center;
    width: 100%;
  }

  .adv-offre-highlight {
    color: {{ section.settings.highlight_color }};
    font-weight: {{ section.settings.highlight_weight }};
  }

  .adv-offre-description {
    font-family: 'Open Sans', sans-serif;
    font-size: {{ section.settings.description_size }}px;
    line-height: {{ section.settings.description_line_height }};
    color: {{ section.settings.description_color }};
    font-weight: {{ section.settings.description_weight }};
    margin: 0;
    text-align: center;
    width: 100%;
  }

  .adv-offre-cta-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    width: 100%;
  }

  .adv-offre-button-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .adv-offre-button {
    font-family: 'Open Sans', 'Noto Sans', sans-serif;
    font-size: {{ section.settings.button_size }}px;
    font-weight: {{ section.settings.button_weight }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    text-align: center;
    text-transform: uppercase;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
    min-height: 70px;
  }

  .adv-offre-button:hover {
    transform: translateY(-2px);
  }

  .adv-offre-button:active {
    transform: translateY(2px);
    box-shadow: 0px 2px 0px 0px {{ section.settings.button_shadow_color }} !important;
  }

  .adv-offre-deadline {
    font-family: 'Open Sans', sans-serif;
    font-size: {{ section.settings.deadline_size }}px;
    line-height: 1.4;
    color: {{ section.settings.deadline_color }};
    font-weight: {{ section.settings.deadline_weight }};
    margin: 0;
    text-align: center;
    width: 100%;
  }

  .adv-offre-deadline-highlight {
    color: {{ section.settings.deadline_highlight_color }};
  }

  .adv-offre-features {
