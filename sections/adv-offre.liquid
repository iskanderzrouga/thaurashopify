    font-size: {{ section.settings.feature_title_size }}px;
    line-height: {{ section.settings.feature_title_line_height }};
    color: {{ section.settings.feature_title_color }};
    font-weight: {{ section.settings.feature_title_weight }};
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .adv-offre-inner {
      flex-direction: column;
      gap: {{ section.settings.mobile_content_gap }}px;
      padding: {{ section.settings.mobile_inner_padding }}px;
    }

    .adv-offre-product {
      width: 100%;
      max-width: {{ section.settings.mobile_product_width }}px;
      margin: 0 auto;
    }

    .adv-offre-content {
      text-align: center;
      max-width: 100%;
      align-items: center;
    }

    .adv-offre-content-inner {
      width: 100%;
    }

    .adv-offre-headline,
    .adv-offre-description,
    .adv-offre-deadline {
      text-align: center;
    }

    .adv-offre-button-wrapper {
      justify-content: center;
    }

    .adv-offre-features {
