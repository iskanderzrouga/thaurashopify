    align-items: center;
    gap: {{ section.settings.feature_item_gap }}px;
    text-align: center;
    width: {{ section.settings.feature_item_width }}px;
    flex-shrink: 0;
  }

  .adv-offre-feature-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .adv-offre-feature-icon-circle {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .adv-offre-feature-icon {
    width: {{ section.settings.icon_inner_size }}px;
    height: {{ section.settings.icon_inner_size }}px;
    object-fit: contain;
  }

  .adv-offre-feature-title {
