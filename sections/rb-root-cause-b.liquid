{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5"
  style="background-color: {{ section.settings.bgcolor }};"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      <div class="flex flex-col items-center justify-center gap-3 md:gap-4">
        {% if section.settings.label != blank %}
          <div
            class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000]  {% if section.settings.label_m_center %} max-md:text-center {% endif %} {% if section.settings.label_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.label_color }};"
          >
            {{ section.settings.label }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2
            class="text-[26px] md:text-[42px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>

      <div class="flex flex-col-reverse md:grid md:grid-cols-5 gap-6 md:gap-10 items-start">
        {% if section.blocks.size > 0 %}
          <div class="md:col-span-3 w-full gap-[15px] md:gap-5">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div class="flex flex-col gap-[15px] md:gap-5 w-full">
                    {% if block.settings.heading != blank %}
                      <div
                        class="text-[24px] md:text-[32px] font-bold !leading-tight text-[#000]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.heading_color }};"
                      >
                        {{ block.settings.heading }}
                      </div>
                    {% endif %}
                    {% if block.settings.label != blank %}
                      <div
                        class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000]  {% if block.settings.label_m_center %} max-md:text-center {% endif %} {% if block.settings.label_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.label_color }};"
                      >
                        {{ block.settings.label }}
                      </div>
                    {% endif %}

                    {% if block.settings.description != blank %}
                      <div
                        class="[&>ul]:list-disc [&>ul]:pl-5 {% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[16px] md:text-[16px] {% endif %} font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.description_color }};"
                      >
                        {{ block.settings.description }}
                      </div>
                    {% endif %}

                    {% for block in section.blocks %}
                      {% case block.type %}
                        {% when 'feature' %}
                          <div
                            class="flex flex-col gap-2 text-left items-start"
                          >
                            {% for i in (1..6) %}
                              {% assign description_name = 'description' | append: i %}
                              {% assign description = block.settings[description_name] %}

                              {% if description != blank %}
                                <div class="flex gap-2 items-center">
                                  {% if block.settings.image != blank %}
                                    {{
                                      block.settings.image
                                      | image_url: width: 22
                                      | image_tag: class: 'w-full max-w-[22px] md:max-w-[22px] h-fit mx-auto'
                                    }}
                                  {% endif %}
                                  <div
                                    class="text-[#000] text-[16px] md:text-[16px] font-normal !leading-[1.5]"
                                    style="color: {{ block.settings.description_color }};"
                                  >
                                    {{ description }}
                                  </div>
                                </div>
                              {% endif %}
                            {% endfor %}
                          </div>
                      {% endcase %}
                    {% endfor %}

                    {% if block.settings.description2 != blank %}
                      <div
                        class="[&>ul]:list-disc [&>ul]:pl-5 max-md:[&>ul]:text-left {% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[16px] md:text-[16px] {% endif %} font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.description_color }};"
                      >
                        {{ block.settings.description2 }}
                      </div>
                    {% endif %}

                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 500
                        | image_tag:
                          class: 'w-full rounded-[20px] border-[2px] border-solid border-[#7A5EC5]',
