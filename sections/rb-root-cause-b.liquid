              | image_url: width: max_width
              | image_tag: class: 'w-full section-main-image max-w-[330px] mx-auto', sizes: max_width_px
            }}
          {% endif %}

          <div class="flex flex-col items-center gap-[15px] md:gap-5 w-full">
            {% if section.settings.row_heading != blank %}
              <div
                class="text-[24px] md:text-[32px] font-bold !leading-tight text-[#000] text-center"
                style="color: {{ section.settings.heading_color }};"
              >
                {{ section.settings.row_heading }}
              </div>
            {% endif %}

            <div class="grid grid-cols-3 gap-3 w-full">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'tab' %}
                    <div
                      data-id="{{ block.id }}"
                      class="rb-route-carousel-tab {% if block.settings.first %} active {% endif %} cursor-pointer w-full flex items-center justify-center text-center px-1 md:px-3 py-2 rounded-[4px] border border-[#D9D9D9] text-[#000] bg-white [&.active]:border-[#084C25] [&.active]:bg-[#084C25]  [&.active]:text-white"
                    >
