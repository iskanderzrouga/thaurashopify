              class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.section-{{ section.id }}-padding .rb-route-carousel-tab').forEach((tab) => {
    tab.addEventListener('click', () => {
      const id = tab.getAttribute('data-id');

      // Remove 'active' from all tabs
      document.querySelectorAll('.section-{{ section.id }}-padding .rb-route-carousel-tab').forEach((t) => {
        t.classList.remove('active');
      });

      // Add 'active' to clicked tab
      tab.classList.add('active');

      // Hide all tab contents
      document
        .querySelectorAll('.section-{{ section.id }}-padding .rb-route-carousel-tab-content')
        .forEach((content) => {
          content.classList.remove('active');
          content.classList.add('hidden');
        });

      // Show matching tab content
      const matchingContent = document.querySelector(
        `.section-{{ section.id }}-padding .rb-route-carousel-tab-content[data-id="${id}"]`
      );
      if (matchingContent) {
        matchingContent.classList.add('active');
        matchingContent.classList.remove('hidden');
      }
    });
  });
</script>

