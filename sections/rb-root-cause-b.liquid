                          {% assign description = block.settings[description_name] %}
                          {% assign image_name = 'image' | append: i %}
                          {% assign image = block.settings[image_name] %}

                          <div class="flex items-center gap-3 w-full">
                            {% if image != blank %}
                              {{
                                image
                                | image_url: width: 45
                                | image_tag: class: 'w-full rounded-[60px] max-w-[40px] md:max-w-[45px]', sizes: '60px'
                              }}
                            {% endif %}

                            {% if description != blank %}
                              <div
                                class="text-[16px] md:text-[16px] font-normal !leading-tight text-[#000] [&>p>strong]:text-[#084C25] [&>p>strong]:text-[24px] md:[&>p>strong]:text-[32px] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                                style="color: {{ block.settings.description_color }};"
                              >
                                {{ description }}
                              </div>
                            {% endif %}
                          </div>
                        {% endfor %}
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
