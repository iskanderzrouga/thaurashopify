{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class=""
  style="background-color: {{ section.settings.bgcolor }};"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      <div class="flex flex-col-reverse md:grid grid-cols-2 items-center">
        <div class="relative h-full">
          {% assign max_width = section.settings.max_width | divided_by: 2 %}
          {% assign max_width_px = max_width | append: 'px' %}
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: max_width
              | image_tag: class: 'w-full section-main-image hidden md:block h-full object-cover', sizes: max_width_px
            }}
          {% endif %}
          {% if section.settings.image_mobile != blank %}
            {{
              section.settings.image_mobile
              | image_url: width: max_width
              | image_tag: class: 'w-full section-main-image block md:hidden max-w-[100%] mx-auto', sizes: max_width_px
            }}
          {% endif %}

          <div class="max-md:pb-7 max-md:-top:[50px] absolute left-0 bottom-[30px] md:bottom-[50px] w-full px-5">
            <div class="max-w-[540px] bg-white rounded-[16px] flex flex-col items-center justify-center gap-3 md:gap-4 p-3 md:p-4 mx-auto">
              <div class="flex items-center gap-3 justify-center">
                {% if section.settings.stars != blank %}
                  {{
                    section.settings.stars
                    | image_url: width: 96
                    | image_tag: class: 'w-full max-w-[80px] md:max-w-[96px]', sizes: '96px', preload: true
                  }}
                {% endif %}
                {% if section.settings.heading != blank %}
                  <div
                    class="text-[16px] md:text-[20px] font-bold !leading-tight text-[#000000]"
                    style="color: {{ section.settings.heading_color }};"
                  >
                    {{ section.settings.heading }}
                  </div>
                {% endif %}
              </div>
              {% if section.settings.description != blank %}
                <div
                  class="text-[14px] md:text-[14px] font-normal !leading-tight text-[#000000] text-center"
                  style="color: {{ section.settings.description_color }};"
                >
                  {{ section.settings.description }}
                </div>
              {% endif %}
            </div>

            {% if section.settings.bottom_text != blank %}
              <div
                class="text-[12px] md:text-[14px] font-normal !leading-tight text-[#000] block md:hidden mt-5 max-w-[410px] mx-auto text-center"
                style="color: {{ section.settings.bottom_text_color }};"
              >
                {{ section.settings.bottom_text }}
              </div>
            {% endif %}
          </div>
        </div>

        {% if section.blocks.size > 0 %}
          <div class="section-{{ section.id }}-padding px-5 flex flex-col w-full gap-[15px] md:gap-5">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'star_review' %}
                  <div class="flex items-center gap-3 {% if block.settings.center %} justify-center {% endif %}">
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 96
                        | image_tag: class: 'w-full max-w-[80px] md:max-w-[96px]', sizes: '96px', preload: true
                      }}
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <div
                        class="text-[12px] md:text-[16px] font-medium !leading-tight text-[#000000]"
                        style="color: {{ block.settings.description_color }};"
                      >
                        {{ block.settings.description }}
                      </div>
                    {% endif %}
                  </div>

                {% when 'feature' %}
                  <div class="flex flex-col md:flex-row items-center justify-center gap-3">
                    {% for i in (1..5) %}
                      {% assign description_name = 'description' | append: i %}
                      {% assign description = block.settings[description_name] %}
                      {% assign image_name = 'icon' | append: i %}
                      {% assign image = block.settings[image_name] %}

                      {% if description != blank %}
                        <div class="flex gap-2 items-center">
                          {% if image != blank %}
                            {{ image | image_url: width: 12 | image_tag: class: 'w-full max-w-[12px] h-fit' }}
                          {% endif %}
                          <div
                            class="text-[#000] text-[14px] md:text-[14px] font-normal !leading-[1.5]"
                            style="color: {{ block.settings.color }}"
                          >
                            {{ description }}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>

                {% when 'row' %}
                  <div class="flex flex-col items-center justify-center gap-[15px] md:gap-5">
                    {% if block.settings.label != blank %}
                      <div
                        class="text-[16px] md:text-[24px] font-bold !leading-tight text-[#000]  {% if block.settings.label_m_center %} max-md:text-center {% endif %} {% if block.settings.label_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.label_color }};"
                      >
                        {{ block.settings.label }}
                      </div>
                    {% endif %}

                    {% if block.settings.heading != blank %}
                      <div
                        class="text-[26px] md:text-[42px] font-bold !leading-tight text-[#000]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.heading_color }};"
                      >
                        {{ block.settings.heading }}
                      </div>
                    {% endif %}

                    {% if block.settings.description != blank %}
                      <div
                        class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[17px] md:text-[20px] {% endif %} font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.description_color }};"
                      >
                        {{ block.settings.description }}
                      </div>
                    {% endif %}

                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 500
                        | image_tag:
                          class: 'w-full rounded-[20px] border-[2px] border-solid border-[#7A5EC5]',
                          sizes: '500px'
                      }}
                    {% endif %}

                    {% if block.settings.button_label != blank %}
                      <div class="w-full md:w-fit mx-auto flex flex-col items-center gap-3">
                        <a
                          href="{{ block.settings.button_url }}"
                          class="new-button--primary max-md:!text-base max-md:!px-1"
                        >
                          {{ block.settings.button_label }}
                          {%- render 'icon-arrow-right' -%}
                        </a>
                        {% if block.settings.btn_bottom_text != blank %}
                          <div
                            class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                            style="color: {{ block.settings.btn_bottom_text_color }};"
                          >
                            {{ block.settings.btn_bottom_text }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}

            {% if section.settings.bottom_text != blank %}
              <div
                class="text-[12px] md:text-[14px] font-normal !leading-tight text-[#000] hidden md:block max-w-[410px] mx-auto text-center"
                style="color: {{ section.settings.bottom_text_color }};"
              >
                {{ section.settings.bottom_text }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

