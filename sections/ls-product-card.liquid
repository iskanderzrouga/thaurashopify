{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5"
  style="background-color: {{ section.settings.bgcolor }}"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      {% if section.settings.heading != blank %}
        <h2 class="text-[26px] md:text-[40px] font-bold !leading-tight text-[#000]">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000]">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div id="products" class="border border-[#084C25] rounded-[16px] md:rounded-[32px] grid grid-cols-1 md:grid-cols-5">
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 500
              | image_tag:
                class: 'w-full rounded-t-[16px] md:rounded-tr-[1px] md:rounded-l-[32px] md:col-span-2 hidden md:block',
                sizes: '500px'
            }}
          {% endif %}
          {% if section.settings.image_mobile != blank %}
            {{
              section.settings.image_mobile
              | image_url: width: 500
              | image_tag:
                class: 'w-full rounded-t-[16px] md:rounded-tr-[1px] md:rounded-l-[32px] md:col-span-2 block md:hidden',
                sizes: '500px'
            }}
          {% endif %}

          <div class="md:col-span-3 flex flex-col gap-2 md:gap-4 items-center justify-center p-5 md:p-10 bg-white rounded-b-[16px] md:rounded-bl-[1px] md:rounded-r-[32px] text-center">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'heading' %}
                  {% if block.settings.heading != blank %}
                    <div class="text-[26px] md:text-[40px] font-bold !leading-tight text-[#FF0000]">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}

                {% when 'subheading' %}
                  {% if block.settings.heading != blank %}
                    <div class="text-[18px] md:text-[28px] font-bold !leading-tight text-[#0B0B0B]">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}

                {% when 'description' %}
                  {% if block.settings.description != blank %}
                    <div class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#0B0B0B]">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}

                {% when 'label' %}
                  {% if block.settings.heading != blank %}
                    <div class="text-[12px] md:text-[14px] font-normal !leading-tight text-[#0B0B0B] max-w-[440px]">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}

                {% when 'scarity' %}
                  <div class="flex flex-col gap-2 items-center text-center mt-5 md:mt-8">
                    <div class="flex items-center justify-center gap-2">
                      {% if block.settings.icon != blank %}
                        {{
                          block.settings.icon
                          | image_url: width: 20
                          | image_tag: class: 'w-full rounded-[20px] max-w-[14px] md:max-w-[20px]', sizes: '20px'
                        }}
                      {% endif %}
                      {% if block.settings.heading != blank %}
                        <div class="text-[14px] md:text-[16px] font-bold !leading-tight text-[#0B0B0B]">
                          {{ block.settings.heading }}
                        </div>
                      {% endif %}
                    </div>

                    {% if block.settings.description != blank %}
                      <div class="text-[10px] md:text-[12px] font-normal !leading-tight text-[#0B0B0B]">
                        {{ block.settings.description }}
                      </div>
                    {% endif %}
                  </div>

                {% when 'feature' %}
                  <div class="grid grid-cols-3 gap-5 md:gap-[30px] max-w-[400px]">
                    {% for i in (1..3) %}
                      {% assign description_name = 'text' | append: i %}
                      {% assign description = block.settings[description_name] %}
                      {% assign icon_name = 'image' | append: i %}
                      {% assign icon = block.settings[icon_name] %}

                      {% if description != blank %}
                        <div class="flex gap-1 items-center">
                          {% if icon != blank %}
                            {{
                              icon
                              | image_url: width: 20
                              | image_tag: class: 'w-full max-w-[16px] md:max-w-[20px] h-fit'
                            }}
                          {% endif %}
                          <div class="text-[#084C25] text-[10px] md:text-[12px] font-normal !leading-[1.5] text-left">
                            {{ description }}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>

                {% when 'button' %}
                  {% if block.settings.button_label != blank %}
                    <div class="w-full md:w-fit mx-auto">
                      <a
                        href="{{ block.settings.button_url }}"
                        class="new-button--primary"
                      >
                        {{ block.settings.button_label }}
                        {%- render 'icon-arrow-right' -%}
                      </a>
                    </div>
                  {% endif %}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LS Product Card",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "SubHeading",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "label",
      "name": "Label",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "scarity",
      "name": "Scarity",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "text1",
          "label": "Text 1"
        },
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image 1"
        },
        {
          "type": "text",
          "id": "text2",
          "label": "Text 2"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Image 2"
        },
        {
          "type": "text",
          "id": "text3",
          "label": "Text 3"
        },
        {
          "type": "image_picker",
          "id": "image3",
          "label": "Image 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LS Product Card"
    }
  ]
}
{% endschema %}
