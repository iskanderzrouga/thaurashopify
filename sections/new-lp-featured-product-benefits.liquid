{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="{{ section.settings.section_id }}" class="section-{{ section.id }}-padding px-5 relative" style="background-color: {{ section.settings.bgcolor }};">
  <div class="max-w-[1180px] mx-auto">
    <div class="grid grid-cols-5 gap-4 items-center">
      {% for block in section.blocks %}
        <div class="flex flex-col items-center justify-center text-center">
          {% if block.settings.icon != blank %}
            {{
              block.settings.icon
              | image_url: width: 60
              | image_tag: class: 'w-full max-w-[40px] md:max-w-[60px] h-auto mb-3', preload: true
            }}
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="text-[11px] md:text-[14px] font-normal text-center" style="color: {{ section.settings.text_color }};">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Benefits Icons",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "benefit_icon",
      "name": "Benefit Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Benefits Icons",
      "blocks": [
        {
          "type": "benefit_icon"
        },
        {
          "type": "benefit_icon"
        },
        {
          "type": "benefit_icon"
        },
        {
          "type": "benefit_icon"
        },
        {
          "type": "benefit_icon"
        }
      ]
    }
  ]
}
{% endschema %}
