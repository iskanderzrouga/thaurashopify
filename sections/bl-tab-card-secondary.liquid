{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}
  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      <div class="flex flex-col items-center justify-center gap-3 md:gap-5">
        {% if section.settings.heading != blank %}
          <h2
            class="text-[28px] md:text-[36px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[16px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>

      {% assign max_width = section.settings.max_width %}
      {% comment %} {% assign max_width = section.settings.max_width |  divided_by: 2 %} {% endcomment %}
      {% assign max_width_px = max_width | append: 'px' %}
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: max_width
          | image_tag: class: 'w-full section-main-image', sizes: max_width_px
        }}
      {% endif %}

      <div class="w-full flex flex-col items-center gap-5">
        {% if section.blocks.size > 0 %}
          <div class="grid max-md:grid-cols-2 md:flex items-center justify-center gap-2 md:gap-3 w-full">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div class="">
                    {% if block.settings.label != blank %}
                      <div
                        data-id="{{ block.id }}"
                        class="bl-tab-card-se-tab {% if forloop.first %} active {% endif %} w-full text-center cursor-pointer [&.active]:bg-[#084C25] [&.active]:text-[#fff] text-[16px] md:text-[16px] font-bold !leading-tight text-[#084C25] border border-[#084C25] bg-[#fff] rounded-[100px] px-5 py-2"
                      >
                        {{ block.settings.label }}
                      </div>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
          <div class="flex w-full flex-col gap-5">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div
                    data-id="{{ block.id }}"
                    class="bl-tab-card-se-card {% if forloop.first %} active {% endif %} hidden [&.active]:grid grid-cols-1 md:grid-cols-3 border border-[#1C5934] rounded-[12px]"
                  >
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 500
                        | image_tag:
                          class: 'w-full rounded-l-[12px] h-full object-cover hidden md:block',
                          sizes: '500px'
                      }}
                    {% endif %}
                    {% if block.settings.image_mobile != blank %}
                      {{
                        block.settings.image_mobile
                        | image_url: width: 500
                        | image_tag:
                          class: 'w-full rounded-t-[12px] h-full object-cover block md:hidden',
                          sizes: '500px'
                      }}
                    {% endif %}
                    <div
                      class="bl-tab-card-se-mobile-parent group md:col-span-2 flex flex-col gap-2 md:gap-5 md:rounded-r-[12px] max-md:rounded-b-[12px] bg-white p-4 md:p-10"
                      style="background-color: {{ block.settings.bgcolor }};"
                    >
                      {% if block.settings.heading != blank %}
                        <div
                          class="bl-tab-card-se-heading text-[24px] md:text-[24px] font-bold !leading-tight text-[#00754A] flex justify-between gap-3"
                          style="color: {{ block.settings.heading_color }};"
                        >
                          <span>{{ block.settings.heading }}</span>
                        </div>
                      {% endif %}
                      {% if block.settings.description != blank %}
                        <div
                          class="text-[16px] md:text-[20px] font-normal !leading-tight text-[#000]"
                          style="color: {{ block.settings.description_color }};"
                        >
                          {{ block.settings.description }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div class="flex flex-col items-center text-center gap-3">
        {% if section.settings.btn_top_text1 != blank %}
          <div
            class="text-[10px] md:text-[12px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.btn_top_text_color }};"
          >
            {{ section.settings.btn_top_text1 }}
          </div>
        {% endif %}
        {% if section.settings.btn_top_text2 != blank %}
          <div
            class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.btn_top_text_color }};"
          >
            {{ section.settings.btn_top_text2 }}
          </div>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="mt-3 text-[12px] md:text-[14px] font-normal !leading-tight text-[#000] flex w-full items-center justify-center gap-2 {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {% if section.settings.icon != blank %}
                {{
                  section.settings.icon
                  | image_url: width: 24
                  | image_tag: class: 'w-full max-w-[24px]', sizes: '24px'
                }}
              {% endif %}
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.bl-tab-card-se-tab');
    const cards = document.querySelectorAll('.bl-tab-card-se-card');

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        const id = tab.getAttribute('data-id');
        tabs.forEach((t) => t.classList.remove('active'));
        tab.classList.add('active');

        cards.forEach((c) => c.classList.remove('active'));
        const match = document.querySelector(`.bl-tab-card-se-card[data-id="${id}"]`);
        if (match) {
          match.classList.add('active');
        }
      });
    });
  });
</script>

