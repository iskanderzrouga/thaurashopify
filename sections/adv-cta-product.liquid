<div class="adv-cta-product-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-cta-product-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      <div class="adv-cta-product-grid adv-mobile-{{ section.settings.mobile_layout }}">
        
        {%- comment -%} Product Image Column {%- endcomment -%}
        <div class="adv-product-column">
          {%- if section.settings.product_image -%}
            <div class="adv-product-visual">
              <img
                src="{{ section.settings.product_image | image_url: width: 800 }}"
                alt="{{ section.settings.product_name }}"
                loading="lazy"
              >
            </div>
          {%- endif -%}

          {%- if section.blocks.size > 0 -%}
            <div class="adv-product-features">
              {%- for block in section.blocks -%}
                {%- if block.type == 'feature' -%}
                  <div class="adv-product-feature" {{ block.shopify_attributes }}>
                    {%- if block.settings.icon -%}
                      <div class="adv-feature-icon">
                        <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.text }}" width="40" height="40">
                      </div>
                    {%- endif -%}
                    <p class="adv-feature-text">{{ block.settings.text }}</p>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} CTA Content Column {%- endcomment -%}
        <div class="adv-cta-column">
          
          {%- if section.settings.eyebrow != blank -%}
            <p class="adv-cta-eyebrow">{{ section.settings.eyebrow }}</p>
          {%- endif -%}

          {%- if section.settings.heading != blank -%}
            <h2 class="adv-cta-heading">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <p class="adv-cta-subheading">{{ section.settings.subheading }}</p>
          {%- endif -%}

          {%- if section.settings.show_button -%}
            <div class="adv-cta-button-wrapper">
              <a 
                href="{{ section.settings.button_link }}" 
                class="adv-cta-button"
                style="background: {{ section.settings.button_bg }}; color: {{ section.settings.button_color }};"
              >
                {{ section.settings.button_text }}
              </a>
            </div>
          {%- endif -%}

          {%- if section.settings.timer_text != blank -%}
            <p class="adv-cta-timer">{{ section.settings.timer_text }}</p>
          {%- endif -%}

        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .adv-cta-product-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-cta-product-inner {
    margin: 0 auto;
  }

  .adv-cta-product-grid {
    display: grid;
    grid-template-columns: {{ section.settings.image_width }}% 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
  }

  .adv-product-visual img {
    width: 100%;
    height: auto;
    display: block;
  }

  .adv-product-features {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.features_gap }}px;
    margin-top: {{ section.settings.features_margin }}px;
  }

  .adv-product-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1 1 calc({{ section.settings.features_per_row }} - {{ section.settings.features_gap }}px);
    min-width: 100px;
  }

  .adv-feature-icon {
    width: {{ section.settings.feature_icon_size }}px;
    height: {{ section.settings.feature_icon_size }}px;
    background: {{ section.settings.feature_icon_bg }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
  }

  .adv-feature-icon img {
    width: calc({{ section.settings.feature_icon_size }}px / 2);
    height: calc({{ section.settings.feature_icon_size }}px / 2);
    object-fit: contain;
  }

  .adv-feature-text {
    margin: 0;
    font-size: {{ section.settings.feature_text_size }}px;
    line-height: 1.3;
    color: {{ section.settings.feature_text_color }};
  }

  .adv-cta-eyebrow {
    font-size: {{ section.settings.eyebrow_size }}px;
    color: {{ section.settings.eyebrow_color }};
    margin: 0 0 {{ section.settings.eyebrow_margin }}px;
    font-weight: {{ section.settings.eyebrow_weight }};
    text-transform: {{ section.settings.eyebrow_transform }};
    letter-spacing: {{ section.settings.eyebrow_spacing }}px;
  }

  .adv-cta-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-cta-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    line-height: 1.5;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 {{ section.settings.subheading_margin }}px;
  }

  .adv-cta-button-wrapper {
    margin-bottom: {{ section.settings.button_margin }}px;
  }

  .adv-cta-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_size }}px;
    font-weight: {{ section.settings.button_weight }};
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .adv-cta-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .adv-cta-timer {
    font-size: {{ section.settings.timer_size }}px;
    color: {{ section.settings.timer_color }};
    margin: 0;
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .adv-cta-product-grid {
      grid-template-columns: 45% 1fr;
      gap: {{ section.settings.tablet_gap }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .adv-cta-product-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-mobile-stack .adv-cta-product-grid {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .adv-mobile-stack .adv-product-column {
      order: 1;
    }

    .adv-mobile-stack .adv-cta-column {
      order: 2;
      text-align: center;
    }

    .adv-cta-eyebrow {
      font-size: {{ section.settings.mobile_eyebrow_size }}px;
    }

    .adv-cta-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .adv-cta-subheading {
      font-size: {{ section.settings.mobile_subheading_size }}px;
    }

    .adv-cta-button {
      font-size: {{ section.settings.mobile_button_size }}px;
      padding: {{ section.settings.mobile_button_padding_y }}px {{ section.settings.mobile_button_padding_x }}px;
      display: block;
      width: 100%;
    }

    .adv-cta-timer {
      font-size: {{ section.settings.mobile_timer_size }}px;
    }

    .adv-product-features {
      justify-content: center;
    }

    .adv-product-feature {
      flex: 1 1 calc(50% - calc({{ section.settings.features_gap }}px / 2));
    }

    .adv-feature-icon {
      width: {{ section.settings.mobile_feature_icon_size }}px;
      height: {{ section.settings.mobile_feature_icon_size }}px;
    }

    .adv-feature-icon img {
      width: calc({{ section.settings.mobile_feature_icon_size }}px / 2);
      height: calc({{ section.settings.mobile_feature_icon_size }}px / 2);
    }

    .adv-feature-text {
      font-size: {{ section.settings.mobile_feature_text_size }}px;
    }
  }
</style>

