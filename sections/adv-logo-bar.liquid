{{ 'section-adv-logo-bar.css' | asset_url | stylesheet_tag }}

<div class="adv-logo-bar" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-logo-container">
      {%- if section.settings.logo_image -%}
        <img
          class="adv-logo-image"
          src="{{ section.settings.logo_image | image_url: width: 600 }}"
          alt="{{ section.settings.logo_alt | default: shop.name }}"
          width="{{ section.settings.logo_width }}"
          height="auto"
          loading="eager"
        >
      {%- else -%}
        <div class="adv-logo-placeholder">
          <p>{{ section.settings.site_name | default: shop.name }}</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .adv-logo-bar {
    width: 100%;
    height: {{ section.settings.bar_height }}px;
    display: flex;
    align-items: center;
  }

  .adv-logo-container {
    display: flex;
    align-items: center;
    height: 100%;
  }

  .adv-logo-image {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    max-height: {{ section.settings.logo_max_height }}px;
    object-fit: contain;
  }

  .adv-logo-placeholder {
    font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
  }

  .adv-logo-placeholder p {
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .adv-logo-bar {
      height: {{ section.settings.mobile_bar_height }}px;
    }

    .adv-logo-image {
      max-width: {{ section.settings.mobile_logo_width }}px;
      max-height: {{ section.settings.mobile_logo_max_height }}px;
    }

    .adv-logo-placeholder {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "ADV - Logo Bar",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo alt text",
      "info": "Leave blank to use shop name"
    },
    {
      "type": "text",
      "id": "site_name",
      "label": "Site name (if no logo)",
      "default": "StrongMenDaily"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 100,
      "max": 500,
      "step": 5,
      "unit": "px",
      "label": "Logo width (Desktop)",
      "default": 295
    },
    {
      "type": "range",
      "id": "mobile_logo_width",
      "min": 80,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo width (Mobile)",
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_max_height",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo max height (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_logo_max_height",
      "min": 20,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Logo max height (Mobile)",
      "default": 35
    },
    {
      "type": "header",
      "content": "Bar Settings"
    },
    {
      "type": "range",
      "id": "bar_height",
      "min": 40,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Bar height (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "mobile_bar_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bar height (Mobile)",
      "default": 60
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ebebeb"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color (for site name)",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "ADV - Logo Bar"
    }
  ]
}
{% endschema %}

