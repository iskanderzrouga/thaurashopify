{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      {% if section.settings.heading != blank %}
        <h1
          class="text-[28px] md:text-[46px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.description_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% assign max_width = section.settings.max_width %}
      {% comment %} {% assign max_width = section.settings.max_width |  divided_by: 2 %} {% endcomment %}
      {% assign max_width_px = max_width | append: 'px' %}
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: max_width
          | image_tag: class: 'w-full section-main-image', sizes: max_width_px
        }}
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="w-full flex flex-col gap-[15px] md:gap-6">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'image_and_text' %}
                <div class="flex flex-col {% if block.settings.img_right %} flex-col-reverse {% else %} flex-col {% endif %} md:items-center md:grid {% if block.settings.img_narrow %}  md:grid-cols-5 {% else %} md:grid-cols-2 {% endif %} gap-5 md:gap-10">
                  {% unless block.settings.img_right %}
                    {% if block.settings.image != blank %}
                      <div class="{% if block.settings.img_narrow %} md:col-span-2 {% endif %}">
                        {{ block.settings.image | image_url: width: 500 | image_tag: class: 'w-full', sizes: '500px' }}
                      </div>
                    {% endif %}
                  {% endunless %}

                  <div class="{% if block.settings.img_narrow %} md:col-span-3 {% endif %} w-full flex flex-col gap-[15px] md:gap-6">
                    {% if block.settings.description != blank %}
                      <div
                        class="adv-main-para {% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[18px] md:text-[20px] {% endif %} [&>p>a]:text-[#0000FF] font-normal !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.description_color }};"
                      >
                        {{ block.settings.description }}
                      </div>
                    {% endif %}
                    {% if block.settings.show_list %}
                      <div
                        class="flex flex-col gap-2 px-4 md:px-6 py-3 md:py-4 border"
                        style="border-color: {{ block.settings.border_color }};background-color: {{ block.settings.bgcolor }};"
                      >
                        {% for i in (1..6) %}
                          {% assign description_name = 'text' | append: i %}
                          {% assign description = block.settings[description_name] %}
                          {% if description != blank %}
                            <div class="flex gap-2">
                              {% if block.settings.icon != blank %}
                                {{
                                  block.settings.icon
                                  | image_url: width: 24
                                  | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px] h-fit'
                                }}
                              {% endif %}
                              <div
                                class="text-[#000] text-[18px] md:text-[20px] font-normal !leading-[1.5]"
                                style="color: {{ block.settings.text_color }};"
                              >
                                {{ description }}
                              </div>
                            </div>
                          {% endif %}
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>

                  {% if block.settings.img_right %}
                    {% if block.settings.image != blank %}
                      <div class="{% if block.settings.img_narrow %} md:col-span-2 {% endif %}">
                        {{ block.settings.image | image_url: width: 500 | image_tag: class: 'w-full', sizes: '500px' }}
                      </div>
                    {% endif %}
                  {% endif %}
                </div>
              {% when 'row' %}
                <div
                  class="flex flex-col gap-[15px] md:gap-6 w-full {% if block.settings.card %} px-4 md:px-6 py-3 md:py-4 border {% endif %}"
                  {% if block.settings.card %}
                    style="border-color: {{ block.settings.border_color }};background-color: {{ block.settings.bgcolor }};"
                  {% endif %}
                >
                  {% if block.settings.label != blank %}
                    <div
                      class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000]  {% if block.settings.label_m_center %} max-md:text-center {% endif %} {% if block.settings.label_d_center %} md:text-center {% endif %}"
                      style="color: {{ block.settings.label_color }};"
                    >
                      {{ block.settings.label }}
                    </div>
                  {% endif %}
                  {% if block.settings.heading != blank %}
                    <h2
                      class="mt-5 md:mt-6 {% if block.settings.heading_big %} text-[28px] md:text-[46px] {% else %} text-[26px] md:text-[36px] {% endif %} font-bold !leading-tight text-[#000]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                      style="color: {{ block.settings.heading_color }};"
                    >
                      {{ block.settings.heading }}
                    </h2>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div
                      class="adv-main-para {% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[18px] md:text-[20px] {% endif %} [&>p>a]:text-[#0000FF] [&>p>a>em>strong]:text-[#0000FF] [&>p>a>em>strong]:underline [&>p>a>em>strong]:not-italic font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                      style="color: {{ block.settings.description_color }};"
                    >
                      {{ block.settings.description }}
                    </div>
                  {% endif %}

                  {% if block.settings.image != blank %}
                    {% if block.settings.img_full_width %}
                      {{
                        block.settings.image
                        | image_url: width: max_width
                        | image_tag: class: 'w-full', sizes: max_width_px
                      }}
                    {% else %}
                      {% assign max_width_b = block.settings.max_width %}
                      {% assign max_width_b_px = max_width_b | append: 'px' %}
                      <div style="max-width: {{ max_width_b_px }};">
                        {{
                          block.settings.image
                          | image_url: width: max_width_b
                          | image_tag: class: 'w-full', sizes: max_width_b_px
                        }}
                      </div>
                    {% endif %}
                  {% endif %}

                  {% if block.settings.button_label != blank %}
                    <div class="w-full">
                      <a
                        href="{{ block.settings.button_url }}"
                        class="new-button--primary !bg-[#00C249] !rounded-[10px] !p-3 md:!p-[18px] !text-lg md:!text-[24px] w-full"
                        style="box-shadow: 0px 6px 0px 0px #028332;"
                      >
                        {{ block.settings.button_label }}
                        {%- render 'icon-arrow-right' -%}
                      </a>
                      {% if block.settings.btn_bottom_text != blank %}
                        <div
                          class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                          style="color: {{ block.settings.btn_bottom_text_color }};"
                        >
                          {{ block.settings.btn_bottom_text }}
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
