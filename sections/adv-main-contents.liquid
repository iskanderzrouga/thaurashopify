              class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<div id="caseStudyModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-[#00000063]">
  <div class="bg-white rounded-lg overflow-hidden w-[95%] max-w-[1200px] h-[90%] relative p-5">
    <button
      onclick="closeCaseStudyModal()"
      class="cursor-pointer text-[30px] absolute top-3 right-3 text-black text-xl font-bold w-12 h-12 bg-white rounded-[50px]"
      style="box-shadow: 0px 4px 4px 0px #00000040;"
    >
      Ã—
    </button>
    <iframe id="caseStudyIframe" src="" class="w-full h-full border-none"></iframe>
  </div>
</div>

<script>
  function openCaseStudyModal(url) {
    const modal = document.getElementById('caseStudyModal');
    const iframe = document.getElementById('caseStudyIframe');

    iframe.src = url;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function closeCaseStudyModal() {
    const modal = document.getElementById('caseStudyModal');
    const iframe = document.getElementById('caseStudyIframe');

    iframe.src = '';
    modal.classList.remove('flex');
    modal.classList.add('hidden');
  }

  // NEW: catch clicks on ANY .adv-main-para a
  document.addEventListener('click', function (e) {
    const link = e.target.closest('.adv-main-para a');
    if (!link) return;

    e.preventDefault();

    // Build the PDF URL with your params
    const cleanUrl = link.href.split('?')[0];
    const url = cleanUrl + '#navpanes=0&toolbar=0&view=FitH';

    openCaseStudyModal(url);
  });
</script>

