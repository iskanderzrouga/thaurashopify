        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#121212"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "SubHeading"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "SubHeading Color",
          "default": "#121212"
        },
        {
          "type": "richtext",
          "id": "description1",
          "label": "Description 1"
        },
        {
          "type": "richtext",
          "id": "description2",
          "label": "Description 2"
        },
