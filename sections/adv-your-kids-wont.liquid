<link rel="stylesheet" href="{{ 'section-adv-your-kids-wont.css' | asset_url }}">

<section class="adv-your-kids" data-section-id="{{ section.id }}">
  <div class="adv-your-kids__container page-width">
    
    {%- comment -%} Main Headline {%- endcomment -%}
    {%- if section.settings.headline != blank -%}
      <h2 class="adv-your-kids__headline">
        {{ section.settings.headline }}
      </h2>
    {%- endif -%}

    {%- comment -%} Main Image {%- endcomment -%}
    {%- if section.settings.main_image != blank -%}
      <div class="adv-your-kids__image-wrapper">
        <img
          src="{{ section.settings.main_image | image_url: width: 2080 }}"
          loading="lazy"
          width="{{ section.settings.main_image.width }}"
          height="{{ section.settings.main_image.height }}"
          alt="{{ section.settings.main_image.alt | escape }}"
          class="adv-your-kids__image"
        >
      </div>
    {%- endif -%}

    {%- comment -%} Body Text (Long Paragraph - Italic) {%- endcomment -%}
    {%- if section.settings.body_text != blank -%}
      <div class="adv-your-kids__body">
        {{ section.settings.body_text }}
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .adv-your-kids {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .adv-your-kids {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }
  }
</style>

