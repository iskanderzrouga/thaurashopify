{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }}"
>
  <div
    class="mx-auto w-full max-w-[1420px] flex flex-col items-center justify-center gap-8 relative"
    style="max-width: {{ section.settings.max_width }}px;"
  >
    <div
      class="flex flex-col items-center justify-center gap-10 text-center mx-auto relative px-4 py-8 md:px-10 md:py-12"
    >
      {% if section.settings.bg_img != blank %}
        {{
          section.settings.bg_img
          | image_url: width: 1140
          | image_tag: class: 'w-full absolute top-0 left-0 h-full object-cover rounded-[16px]', sizes: '1140px'
        }}
      {% endif %}

      {% if section.settings.heading != blank %}
        <div
          class="text-[26px] md:text-[36px] font-bold !leading-tight text-[#fff] relative"
        >
          {{ section.settings.heading }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[16px] md:text-[18px] font-normal !leading-[1.5] text-[#fff] relative [&>h3]:text-[20px] [&>h3]:font-medium [&>h3]:md:text-[24px]"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>

    <div class="grid md:grid-cols-3 gap-[30px] md:gap-10 lg:gap-[80px]">
      <div class="col-span-1 grid grid-cols-2 md:grid-cols-1 gap-2 md:gap-4 w-full h-fit">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'tab' %}
              <div
                data-id="{{ block.id }}"
                gp-tabs-tab
                class="font-medium w-full p-2 md:p-3 {% if block.settings.first %} active {% endif %} cursor-pointer flex items-center justify-center border border-[#084C25] rounded-[100px] text-xs md:text-xl text-[#084C25] font-medium !leading-tight text-center opacity-70 [&.active]:opacity-100 bg-white [&.active]:bg-[#084C25] [&.active]:text-[#fff]"
              >
                {{ block.settings.label }}
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      <div class="md:col-span-2">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'tab' %}
              <div
                data-id="{{ block.id }}"
                gp-tabs-card
                class="{% if block.settings.first %} active {% endif %} flex-col gap-6 hidden [&.active]:flex"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-5">
                  {% assign tab_index = block.settings.index %}

                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'row' %}
                        {% if block.settings.index == tab_index %}
                          <div
                            class="flex h-full border border-[#AAAAAA] rounded-[12px] {% if block.settings.desktop_large %} md:col-span-2 {% endif %}"
                            style="box-shadow: 0px 10px 15px -5px #0000001A;"
                          >
                            {% if block.settings.image != blank %}
                              {{
                                block.settings.image
                                | image_url: width: 140
                                | image_tag:
                                  class: 'w-full max-w-[70px] min-w-[70px] rounded-l-[12px] object-cover',
                                  sizes: '140px'
                              }}
                            {% endif %}

                            <div class="flex flex-col justify-between flex-1 bg-white rounded-r-[12px]">
                              <div class="p-4 flex flex-col {% if block.settings.center_text %} items-center justify-center text-center {% endif %} gap-[10px]">
                                {% if block.settings.heading != blank %}
                                  <div class="text-[16px] md:text-[20px] font-bold !leading-tight text-[#000]">
                                    {{ block.settings.heading }}
                                  </div>
                                {% endif %}

                                {% if block.settings.description != blank %}
                                  <div class="text-[16px] md:text-[16px] font-normal !leading-[1.5] text-[#000] [&>p>a]:text-[#0000EE] [&>p>a]:font-bold [&>p>a]:underline">
                                    {{ block.settings.description }}
                                  </div>
                                {% endif %}
                              </div>
                            </div>
                          </div>
                        {% endif %}
                    {% endcase %}
                  {% endfor %}
                </div>

                {% if block.settings.description != blank %}
                  <div class="text-[18px] md:text-[20px] font-normal !leading-tight text-[#333]">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>

    <div class="w-full flex flex-col items-center justify-center gap-[10px]">
      {% if section.settings.label != blank %}
        <div
          class="text-[14px] md:text-[14px] text-[#000] font-normal !leading-tight text-center mb-4"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.label }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a href="{{ section.settings.button_url }}" class="new-button--{{section.settings.button_type}} nl-smooth-scroll-btn">
            {{ section.settings.button_label }}
            {% if section.settings.button_type == 'primary' %}
              {%- render 'icon-arrow-right' -%}
            {% elsif section.settings.button_type == 'secondary' %}
              {%- render 'icon-arrow-right-secondary' -%}
            {% endif %}
          </a>
        </div>
      {% endif %}

      {% if section.settings.product_bottom_label != blank %}
        <div class="flex items-center gap-2 mt-3 md:mt-4 relative w-fit mx-auto">
          {% if section.settings.bottom_label_icon != blank %}
            {{
              section.settings.bottom_label_icon
              | image_url: width: 24
              | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
            }}
          {% endif %}

          <div
            class="text-[15px] md:text-[15px] text-[#000] font-normal !leading-tight"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.product_bottom_label }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  // Smooth scroll functionality
  document.querySelectorAll('.nl-smooth-scroll-btn').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      var href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        var target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });

  document.querySelectorAll('[gp-tabs-tab]').forEach((tab) => {
    tab.addEventListener('click', function () {
      const tabGroup = this.getAttribute('gp-tabs-tab');
      const dataId = this.getAttribute('data-id');

      // Remove 'active' from all tabs in the same group
      document.querySelectorAll(`[gp-tabs-tab="${tabGroup}"]`).forEach((el) => {
        el.classList.remove('active');
      });

      // Add 'active' to clicked tab
      this.classList.add('active');

      // Remove 'active' from all cards
      document.querySelectorAll('[gp-tabs-card]').forEach((card) => {
        card.classList.remove('active');
      });

      // Add 'active' to matching card
      const matchingCard = document.querySelector(`[gp-tabs-card][data-id="${dataId}"]`);
      if (matchingCard) {
        matchingCard.classList.add('active');
      }
    });
  });
</script>

