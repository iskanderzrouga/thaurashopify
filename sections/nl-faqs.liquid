{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }}"
>
  <div
    class="mx-auto w-full max-w-[1420px] flex flex-col items-center justify-center gap-8 relative"
    style="max-width: {{ section.settings.max_width }}px;"
  >
    <div
      class="flex flex-col items-center justify-center gap-10 text-center mx-auto relative"
    >
      {% if section.settings.heading != blank %}
        <h2
          class="text-[26px] md:text-[36px] font-bold !leading-tight text-[#fff]"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[17px] md:text-[18px] font-normal !leading-[1.5] text-[#fff]"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      <div class="w-full">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'row' %}
              <div
                data-index="{{ forloop.index }}"
                class="{% if forloop.first %} active {% endif %} group dropdown-parent flex flex-col gap-5 mb-1"
              >
                {% if block.settings.heading != blank %}
                  <div
                    data-index="{{ forloop.index }}"
                    class="dropdown-heading flex items-center justify-between py-4 border-t cursor-pointer [&>svg]:min-w-[32px] px-4"
                    style="
                      background-color: {{ section.settings.dropdown_heading_bgcolor | default: '#10B981' }};
                      border-color: {{ section.settings.dropdown_border_color | default: '#10B981' }};
                    "
                  >
                    <div
                      class="text-[17px] md:text-[20px] font-medium !leading-tight"
                      style="color: {{ section.settings.dropdown_heading_text_color | default: '#FFFFFF' }}"
                    >
                      {{ block.settings.heading }}
                    </div>
                    <span class="group-[.active]:rotate-180 duration-100" style="color: {{ section.settings.dropdown_arrow_color | default: '#000000' }}">
                      {% render 'icon-chevron-down' %}
                    </span>
                  </div>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div
                    class="dropdown-content group-[.active]:block hidden text-[16px] md:text-[17px] font-normal !leading-[1.5] text-[#000] pb-4 px-4"
                    style="
                      color: {{section.settings.color_primary}}; {% if section.settings.dropdown_heading_bgcolor != blank %}
                        background-color: {{ section.settings.dropdown_content_bgcolor }};
                      {% endif %}
                    "
                  >
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="w-full flex flex-col items-center justify-center gap-[10px] relative">
      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          {% comment %} Build checkout URL with discount code if provided {% endcomment %}
          {% liquid
            assign checkout_url = '/checkout'
            if section.settings.discount_code != blank
              assign checkout_url = checkout_url | append: '?discount=' | append: section.settings.discount_code
            endif
          %}
          <a href="{{ checkout_url }}" class="new-button--{{section.settings.button_type}}">
            {{ section.settings.button_label }}
            {% if section.settings.button_type == 'primary' %}
              {%- render 'icon-arrow-right' -%}
            {% elsif section.settings.button_type == 'secondary' %}
              {%- render 'icon-arrow-right-secondary' -%}
            {% endif %}
          </a>
        </div>
      {% endif %}

      {% if section.settings.product_bottom_label != blank %}
        <div class="flex items-center gap-2 mt-3 md:mt-4 relative w-fit mx-auto">
          {% if section.settings.bottom_label_icon != blank %}
            {{
              section.settings.bottom_label_icon
              | image_url: width: 24
              | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
            }}
          {% endif %}

          <div
            class="text-[15px] md:text-[15px] text-[#000] font-normal !leading-tight"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.product_bottom_label }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdownHeadings = document.querySelectorAll('.section-{{ section.id }}-padding .dropdown-heading');

    dropdownHeadings.forEach((heading) => {
      heading.addEventListener('click', () => {
        const index = heading.getAttribute('data-index');

        // Find parent dropdown-parent with matching data-index
        const parentDropdown = document.querySelector(
          `.section-{{ section.id }}-padding .dropdown-parent[data-index="${index}"]`
        );

        let dropdownIsOpened = false;
        if (parentDropdown && parentDropdown.classList.contains('active')) {
          dropdownIsOpened = true;
        }

        // Remove "active" from all dropdown parents
        document.querySelectorAll('.section-{{ section.id }}-padding .dropdown-parent').forEach((parent) => {
          parent.classList.remove('active');
        });

        // Add "active" to the clicked dropdown parent
        if (parentDropdown) {
          if (dropdownIsOpened) {
            parentDropdown.classList.remove('active');
          } else {
            parentDropdown.classList.add('active');
          }
        }
      });
    });
  });
</script>

