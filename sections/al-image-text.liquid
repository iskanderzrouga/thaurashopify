{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }}-padding .al-image-text__image,
  .section-{{ section.id }}-padding .al-image-text__video {
    border: 1px solid {{ section.settings.image_border }}
  }
{%- endstyle -%}

<div
  class="section-{{ section.id }}-padding px-[15px] {% if section.settings.top_border %} md:rounded-t-[30px]{% endif %}"
  style="background-color: {{ section.settings.bgcolor }}"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-[30px] md:gap-[80px]">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {% if section.settings.image_position == 'left' %}
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 600
              | image_tag: class: 'al-image-text__image w-full rounded-[20px] hidden md:block', sizes: '600px'
            }}
          {% endif %}

          {% if section.settings.video_url != blank %}
            <video
              src="{{ section.settings.video_url }}"
              type="video/mp4"
              class="al-image-text__video mediaElementLEFT w-full rounded-[20px] hidden md:block"
              loop
              muted
              playsinline
              autoplay
              disablepictureinpicture
              controlslist="nodownload"
              height="auto"
              style="width:100%;"
            ></video>
          {% endif %}
        {% endif %}
        <div
          class="flex flex-col justify-center gap-6"
          style="text-align: {{ section.settings.text_align }}"
        >
          {% if section.settings.heading != blank %}
            <h2
              class="{% if section.settings.small_heading %} text-[34px] md:text-[40px] {% else %} text-[36px] md:text-[62px] {% endif %} font-semibold text-[#FFF5EB] !leading-tight"
              style="color: {{section.settings.color_primary}}"
            >
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          {% if section.settings.heading2 != blank %}
            <div
              class="{% if section.settings.small_heading %} text-[34px] md:text-[40px] {% else %} text-[36px] md:text-[62px] {% endif %} font-semibold text-[#FFF5EB] !leading-tight"
              style="color: {{section.settings.color_primary}}"
            >
              {{ section.settings.heading2 }}
            </div>
          {% endif %}

          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 600
              | image_tag: class: 'w-full rounded-[20px] block md:hidden', sizes: '600px'
            }}
          {% endif %}

          {% if section.settings.video_url != blank %}
            <video
              src="{{ section.settings.video_url }}"
              type="video/mp4"
              class="mediaElementLEFT w-full rounded-[20px] block md:hidden"
              loop
              muted
              playsinline
              autoplay
              disablepictureinpicture
              controlslist="nodownload"
              height="auto"
              style="width:100%;"
            ></video>
          {% endif %}

          {% if section.settings.description != blank %}
            <div
              class="text-[18px] {% if section.settings.small_description %} md:text-[18px] {% else %} md:text-[20px] {% endif %} font-normal !leading-[1.5] text-[#FFFFFA]"
              style="color: {{section.settings.color_secondary}}"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}

          {% if section.blocks.size > 0 %}
            <div class="w-full flex flex-col gap-5">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'row' %}
                    <div class="flex gap-2">
                      {% if block.settings.image != blank %}
                        {{
                          block.settings.image
                          | image_url: width: 32
                          | image_tag: class: 'w-full h-fit rounded-[50px] max-w-[32px]', sizes: '32px'
                        }}
                      {% endif %}

                      <div class="flex flex-col gap-2">
                        {% if block.settings.heading != blank %}
                          <div class="text-[18px] md:text-[24px] font-bold !leading-tight text-[#272727]">
                            {{ block.settings.heading }}
                          </div>
                        {% endif %}

                        {% if block.settings.description != blank %}
                          <div class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#272727]">
                            {{ block.settings.description }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}

          {% if section.settings.button_position == 'content' %}
            {% if section.settings.button_label != blank %}
              <div class="w-full md:w-fit mx-auto md:min-w-[500px]">
                {% render 'new-button', section: section %}
              </div>
            {% endif %}
          {% endif %}
        </div>

        {% if section.settings.image_position == 'right' %}
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 600
              | image_tag: class: 'w-full rounded-[20px] hidden md:block', sizes: '600px'
            }}
          {% endif %}

          {% if section.settings.video_url != blank %}
            <video
              src="{{ section.settings.video_url }}"
              type="video/mp4"
              class="mediaElementLEFT w-full rounded-[20px] hidden md:block"
              loop
              muted
              playsinline
              autoplay
              disablepictureinpicture
              controlslist="nodownload"
              height="auto"
              style="width:100%;"
            ></video>
          {% endif %}
        {% endif %}
      </div>

      {% if section.settings.button_position == 'bottom' %}
        {% if section.settings.button_label != blank %}
          <div class="w-full md:w-fit mx-auto md:min-w-[500px]">
            {% render 'new-button', section: section %}
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "AL Image Text",
  "settings": [
    {
      "type": "select",
      "id": "text_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text Align"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "heading2",
      "label": "Heading 2"
    },
    {
      "type": "checkbox",
      "id": "small_heading",
      "label": "Small Heading",
      "default": false
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "small_description",
      "label": "Small Description",
      "default": false
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right",
      "label": "Image Position"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_type",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "tertiary",
          "label": "Tertiary"
        }
      ],
      "default": "primary",
      "label": "Button Type"
    },
    {
      "type": "select",
      "id": "button_position",
      "options": [
        {
          "value": "content",
          "label": "Content"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "bottom",
      "label": "Button Position"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "image_border",
      "label": "Image Border Color",
      "default": "#FE6901"
    },
    {
      "type": "color",
      "id": "color_primary",
      "label": "Primary Color",
      "default": "#FE6901"
    },
    {
      "type": "color",
      "id": "color_secondary",
      "label": "Secondary Color",
      "default": "#00176B"
    },
    {
      "type": "color",
      "id": "color_tertiary",
      "label": "Tertiary Color",
      "default": "#212537"
    },
    {
      "type": "checkbox",
      "id": "top_border",
      "label": "Top Border",
      "default": true
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "heading2",
          "label": "Heading 2"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "AL Image Text"
    }
  ]
}
{% endschema %}
