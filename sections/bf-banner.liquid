{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="px-5 relative"
>
  {% assign max_width = section.settings.max_width %}
  {% assign max_width_px = max_width | append: 'px' %}
  {% if section.settings.image != blank %}
    {{
      section.settings.image
      | image_url: width: max_width
      | image_tag: class: 'w-full absolute top-0 left-0 w-full h-full object-cover', sizes: max_width_px
    }}
  {% endif %}

  <div
    class="section-{{ section.id }}-padding mx-auto w-full relative"
    style="max-width: {{ section.settings.max_width }}px;"
  >
    {% if section.settings.save != blank %}
      <div
        class="text-[17px] md:text-[24px] font-normal text-center !leading-[1] text-[#fff] absolute top-0 max-md:right-0 md:left-0 px-6 md:px-10 pb-2 md:pb-3 pt-2 md:pt-[130px] rounded-b-[16px] md:rounded-b-[32px] border-b-2 border-x-2 border-[#F6D69D]"
      >
        {{ section.settings.save }}
      </div>
    {% endif %}

    <div class="flex flex-col gap-4 md:flex-row relative">
      {% if section.settings.heading != blank %}
        <h2
          class="md:flex-1 text-[36px] md:text-[42px] lg:text-[72px] font-bold !leading-tight text-[#000] md:pl-6"
          style="
            color: {{ section.settings.heading_color }}; text-shadow:
            0 0 20px #ff0000,
            0 0 40px #ff0000,
            0 0 80px #ff0000,
            0 0 160px #ff0000;
          "
        >
          <span class="{% if section.settings.heading_mobile != blank %} hidden md:block {% endif %}">{{ section.settings.heading }}</span>
          {% if section.settings.heading_mobile != blank %}
            <span class="block md:hidden">{{ section.settings.heading_mobile }}</span>
          {% endif %}
        </h2>
      {% endif %}

      <div class="flex flex-row md:flex-col items-center md:items-end gap-3">
        {% if section.settings.description != blank %}
          <div
            class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000] flex-1"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="w-fit">
            <a
              href="{{ section.settings.button_url }}"
              class="new-button--primary max-md:!text-sm max-md:!px-4 max-md:!py-[6px]"
              style="background: linear-gradient(90deg, #072E21 0%, #0C3129 26.18%, #14553D 47.91%, #0C3129 77.05%, #072E21 100%); border: 1px solid #F6D69D;"
            >
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BF Banner",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "heading_mobile",
      "label": "Heading Mobile"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "save",
      "label": "Save"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#121212"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "BF Banner"
    }
  ]
}
{% endschema %}
