{{ 'section-adv-benefits.css' | asset_url | stylesheet_tag }}

<div class="adv-benefits-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-benefits-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="adv-benefits-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <div class="adv-benefits-subheading">{{ section.settings.subheading }}</div>
      {%- endif -%}

      {%- if section.settings.intro_text != blank -%}
        <div class="adv-benefits-intro">{{ section.settings.intro_text }}</div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="adv-benefits-grid adv-cols-{{ section.settings.desktop_columns }} adv-mobile-cols-{{ section.settings.mobile_columns }}">
          {%- for block in section.blocks -%}
            <div class="adv-benefit-item" {{ block.shopify_attributes }}>
              {%- if block.settings.icon -%}
                <div class="adv-benefit-icon">
                  <img
                    src="{{ block.settings.icon | image_url: width: 240 }}"
                    alt="{{ block.settings.title }}"
                    width="120"
                    height="120"
                    loading="lazy"
                  >
                </div>
              {%- elsif block.settings.icon_svg != blank -%}
                <div class="adv-benefit-icon adv-benefit-svg">
                  {{ block.settings.icon_svg }}
                </div>
              {%- endif -%}

              {%- if block.settings.title != blank -%}
                <h3 class="adv-benefit-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <div class="adv-benefit-description">{{ block.settings.description }}</div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if section.settings.bottom_text != blank -%}
        <div class="adv-benefits-bottom">{{ section.settings.bottom_text }}</div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-benefits-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-benefits-inner {
    margin: 0 auto;
  }

  .adv-benefits-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    text-align: {{ section.settings.text_alignment }};
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-benefits-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    line-height: 1.4;
    color: {{ section.settings.subheading_color }};
    margin-bottom: {{ section.settings.subheading_margin }}px;
    text-align: {{ section.settings.text_alignment }};
  }

  .adv-benefits-intro {
    font-size: {{ section.settings.intro_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin-bottom: {{ section.settings.intro_margin }}px;
  }

  .adv-benefits-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    margin-bottom: {{ section.settings.grid_margin }}px;
  }

  .adv-cols-2 { grid-template-columns: repeat(2, 1fr); }
  .adv-cols-3 { grid-template-columns: repeat(3, 1fr); }
  .adv-cols-4 { grid-template-columns: repeat(4, 1fr); }

  .adv-benefit-item {
    text-align: {{ section.settings.items_alignment }};
    padding: {{ section.settings.item_padding }}px;
    background: {{ section.settings.item_background }};
    border-radius: {{ section.settings.item_radius }}px;
    {%- if section.settings.show_item_border -%}
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    {%- endif -%}
  }

  .adv-benefit-icon {
    margin-bottom: {{ section.settings.icon_margin }}px;
    display: flex;
    justify-content: {{ section.settings.items_alignment }};
  }

  .adv-benefit-icon img {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    object-fit: contain;
  }

  .adv-benefit-svg {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin-left: auto;
    margin-right: auto;
  }

  .adv-benefit-svg svg {
    width: 100%;
    height: 100%;
  }

  .adv-benefit-title {
    font-size: {{ section.settings.title_size }}px;
    line-height: 1.3;
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_margin }}px;
    font-weight: {{ section.settings.title_weight }};
  }

  .adv-benefit-description {
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
    margin: 0;
  }

  .adv-benefits-bottom {
    font-size: {{ section.settings.bottom_text_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin-top: {{ section.settings.bottom_margin }}px;
  }

  @media screen and (max-width: 989px) {
    .adv-cols-4.adv-mobile-cols-2 { grid-template-columns: repeat(2, 1fr); }
    .adv-cols-3.adv-mobile-cols-2 { grid-template-columns: repeat(2, 1fr); }
  }

  @media screen and (max-width: 749px) {
    .adv-benefits-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-benefits-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .adv-benefits-subheading {
      font-size: {{ section.settings.mobile_subheading_size }}px;
    }

    .adv-benefits-intro {
      font-size: {{ section.settings.mobile_intro_size }}px;
    }

    .adv-benefits-grid {
      gap: {{ section.settings.mobile_gap }}px;
    }

    .adv-mobile-cols-1 { grid-template-columns: 1fr; }
    .adv-mobile-cols-2 { grid-template-columns: repeat(2, 1fr); }

    .adv-benefit-item {
      padding: {{ section.settings.mobile_item_padding }}px;
    }

    .adv-benefit-icon img {
      width: {{ section.settings.mobile_icon_size }}px;
      height: {{ section.settings.mobile_icon_size }}px;
    }

    .adv-benefit-svg {
      width: {{ section.settings.mobile_icon_size }}px;
      height: {{ section.settings.mobile_icon_size }}px;
    }

    .adv-benefit-title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    .adv-benefit-description {
      font-size: {{ section.settings.mobile_description_size }}px;
    }

    .adv-benefits-bottom {
      font-size: {{ section.settings.mobile_bottom_size }}px;
    }
  }
</style>

