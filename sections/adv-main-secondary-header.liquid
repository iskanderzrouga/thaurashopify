{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #shopify-section-nl-header,
  #shopify-section-nl-animation-secondary {
    display: none!important;
  }
{%- endstyle -%}

{% if section.settings.text != blank %}
  <div
    class="text-[14px] md:text-[16px] font-bold !leading-tight text-[#fff] p-[6px] text-center"
    style="background-color: {{ section.settings.bgcolor }}"
  >
    {{ section.settings.text }}
  </div>
{% endif %}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5"
  style="background-color: {{ section.settings.bgcolor2 }}"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex items-center justify-center md:justify-start">
      {% if section.settings.logo != blank %}
        {{
          section.settings.logo
          | image_url: width: 300
          | image_tag: class: 'w-full max-w-[270px] md:max-w-[290px]', sizes: '300px'
        }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Adv Secondary Header",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#1544AA"
    },
    {
      "type": "color",
      "id": "bgcolor2",
      "label": "Background Color 2",
      "default": "#1544AA"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Adv Secondary Header"
    }
  ]
}
{% endschema %}
