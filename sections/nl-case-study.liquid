{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="{{ section.settings.section_id }}" class="section-{{ section.id }}-padding px-5 relative" style="background-color: {{ section.settings.bgcolor }}">
  <div
    class="mx-auto w-full max-w-[1420px] flex flex-col items-center justify-center gap-8 relative"
    style="max-width: {{ section.settings.max_width }}px;"
  >
    {% if section.settings.heading != blank %}
      <h2
        class="text-[26px] md:text-[36px] font-bold !leading-tight text-[#000] relative text-center"
      >
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="w-full">
      <div class="w-full flex-1 pb-[30px]">
        {% if section.blocks.size > 0 %}
          <div class="splide nl-case-study__carousel">
            <div class="splide__track">
              <div class="splide__list md:!grid md:!grid-cols-8 md:gap-5">
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'row' %}
                      <div class="splide__slide md:!col-span-2 ">
                        <div
                          class="flex flex-col h-full border border-[#AAAAAA] rounded-[12px]"
                          style="box-shadow: 0px 10px 15px -5px #0000001A;"
                        >
                          {% if block.settings.image != blank %}
                            {{
                              block.settings.image
                              | image_url: width: 500
                              | image_tag: class: 'w-full rounded-t-[12px]', sizes: '500px'
                            }}
                          {% endif %}

                          <div class="flex flex-col justify-between flex-1 bg-white rounded-b-[12px]">
                            <div class="p-5 flex flex-col {% if block.settings.center_text %} items-center justify-center text-center {% endif %} gap-[14px]">
                              {% if block.settings.description != blank %}
                                <div
                                  onclick="openCaseStudyModal('{{ block.settings.url }}#navpanes=0&toolbar=0&view=FitH')"
                                  class="cursor-pointer text-[17px] md:text-[18px] font-normal !leading-[1.5] text-[#0000EE] underline"
                                >
                                  {{ block.settings.description | truncate: 50 }}
                                </div>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="w-full flex flex-col items-center justify-center gap-[10px]">
      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a href="{{ section.settings.button_url }}" class="new-button--{{section.settings.button_type}}">
            {{ section.settings.button_label }}
            {% if section.settings.button_type == 'primary' %}
              {%- render 'icon-arrow-right' -%}
            {% elsif section.settings.button_type == 'secondary' %}
              {%- render 'icon-arrow-right-secondary' -%}
            {% endif %}
          </a>
        </div>
      {% endif %}

      {% if section.settings.product_bottom_label != blank %}
        <div class="flex items-center gap-2 mt-3 md:mt-4 relative w-fit mx-auto">
          {% if section.settings.bottom_label_icon != blank %}
            {{
              section.settings.bottom_label_icon
              | image_url: width: 24
              | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
            }}
          {% endif %}

          <div
            class="text-[15px] md:text-[15px] text-[#000] font-normal !leading-tight"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.product_bottom_label }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<div id="caseStudyModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-[#00000063]">
  <div class="bg-white rounded-lg overflow-hidden w-[95%] max-w-[1200px] h-[90%] relative p-5">
    <button
      onclick="closeCaseStudyModal()"
      class="cursor-pointer text-[30px] absolute top-3 right-3 text-black text-xl font-bold w-12 h-12 bg-white rounded-[50px]"
      style="box-shadow: 0px 4px 4px 0px #00000040;"
    >
      Ã—
    </button>
    <iframe id="caseStudyIframe" src="" class="w-full h-full border-none"></iframe>
  </div>
</div>

<script>
  function openCaseStudyModal(url) {
    const modal = document.getElementById('caseStudyModal');
    const iframe = document.getElementById('caseStudyIframe');
    iframe.src = url;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function closeCaseStudyModal() {
    const modal = document.getElementById('caseStudyModal');
    const iframe = document.getElementById('caseStudyIframe');
    iframe.src = '';
    modal.classList.remove('flex');
    modal.classList.add('hidden');
  }
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .nl-case-study__carousel', {
      perPage: 1,
      perMove: 1,
      rewind: true,
      gap: '15px',
      trimSpace: false,
      pagination: true,
      mediaQuery: 'min',
      arrows: true,
      padding: { right: '60px' },
      breakpoints: {
        767: {
          destroy: true,
        },
      },
    });
    splide.mount();
  });
</script>

<style>
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__arrow--prev {
    bottom: -130px;
    top: auto;
    width: 54px;
    height: 54px;
    background: transparent;
    border: 1px solid #084C25;
    right: 218px;
    left: auto;
  }
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__arrow--next {
    bottom: -130px;
    top: auto;
    width: 54px;
    height: 54px;
    background: transparent;
    border: 1px solid #084C25;
    right: 140px;
  }
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__arrow svg {

    fill: #084C25;
  }
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__pagination__page {
    width: 10px;
    height: 10px;
    background: transparent;
    border: 1px solid #1E3A16;
  }
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__pagination__page.is-active {
    width: 40px;
    border-radius: 20px;
    background: #1E3A16;
    opacity: 1;
    transform: unset;
  }
  .section-{{ section.id }}-padding .nl-case-study__carousel .splide__pagination {
    bottom: -32px;
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding .nl-case-study__carousel .splide__arrow--prev {
      right: auto;
      left: calc(50% - 80px);
    }
    .section-{{ section.id }}-padding .nl-case-study__carousel .splide__arrow--next {
      right: calc(50% - 80px);
    }
  }
</style>

{% schema %}
{
  "name": "NL Case Study",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_type",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "tertiary",
          "label": "Tertiary"
        }
      ],
      "default": "primary",
      "label": "Button Type"
    },
    {
      "type": "text",
      "id": "product_bottom_label",
      "label": "Product Bottom Label"
    },
    {
      "type": "image_picker",
      "id": "bottom_label_icon",
      "label": "Bottom Label Icon"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "url",
          "label": "url"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NL Case Study"
    }
  ]
}
{% endschema %}
