{{ 'section-adv-comparison.css' | asset_url | stylesheet_tag }}

<div class="adv-comparison-wrapper" style="background: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-comparison-inner" style="max-width: {{ section.settings.content_width }}px;">
      
      {%- if section.settings.heading != blank -%}
        <h2 class="adv-comparison-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div class="adv-comparison-grid adv-mobile-{{ section.settings.mobile_layout }}">
        
        {%- comment -%} First Image {%- endcomment -%}
        <div class="adv-comparison-column">
          {%- if section.settings.image_1 -%}
            <div class="adv-comparison-image">
              <img
                src="{{ section.settings.image_1 | image_url: width: 600 }}"
                alt="{{ section.settings.label_1 }}"
                loading="lazy"
              >
              {%- if section.settings.label_1 != blank -%}
                <div class="adv-comparison-label" style="background: {{ section.settings.label_1_bg }}; color: {{ section.settings.label_1_color }};">
                  {{ section.settings.label_1 }}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Second Image {%- endcomment -%}
        <div class="adv-comparison-column">
          {%- if section.settings.image_2 -%}
            <div class="adv-comparison-image">
              <img
                src="{{ section.settings.image_2 | image_url: width: 600 }}"
                alt="{{ section.settings.label_2 }}"
                loading="lazy"
              >
              {%- if section.settings.label_2 != blank -%}
                <div class="adv-comparison-label" style="background: {{ section.settings.label_2_bg }}; color: {{ section.settings.label_2_color }};">
                  {{ section.settings.label_2 }}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>

      </div>

      {%- if section.settings.bottom_text != blank -%}
        <div class="adv-comparison-text">
          {{ section.settings.bottom_text }}
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-comparison-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-comparison-inner {
    margin: 0 auto;
  }

  .adv-comparison-heading {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px;
    text-align: {{ section.settings.heading_alignment }};
    font-weight: {{ section.settings.heading_weight }};
  }

  .adv-comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.column_gap }}px;
    margin-bottom: {{ section.settings.grid_margin }}px;
  }

  .adv-comparison-column {
    position: relative;
  }

  .adv-comparison-image {
    position: relative;
    border-radius: {{ section.settings.image_radius }}px;
    overflow: hidden;
    {%- if section.settings.show_border -%}
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    {%- endif -%}
  }

  .adv-comparison-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .adv-comparison-label {
    position: absolute;
    bottom: {{ section.settings.label_position }}px;
    left: 50%;
    transform: translateX(-50%);
    padding: {{ section.settings.label_padding_y }}px {{ section.settings.label_padding_x }}px;
    font-size: {{ section.settings.label_size }}px;
    font-weight: {{ section.settings.label_weight }};
    border-radius: {{ section.settings.label_radius }}px;
    text-transform: {{ section.settings.label_transform }};
    letter-spacing: {{ section.settings.label_spacing }}px;
  }

  .adv-comparison-text {
    font-size: {{ section.settings.text_size }}px;
    line-height: {{ section.settings.line_height }};
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_alignment }};
  }

  @media screen and (max-width: 749px) {
    .adv-comparison-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-comparison-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
      margin-bottom: {{ section.settings.mobile_heading_margin }}px;
    }

    .adv-mobile-stack .adv-comparison-grid {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .adv-comparison-label {
      font-size: {{ section.settings.mobile_label_size }}px;
      padding: {{ section.settings.mobile_label_padding_y }}px {{ section.settings.mobile_label_padding_x }}px;
    }

    .adv-comparison-text {
      font-size: {{ section.settings.mobile_text_size }}px;
    }
  }
</style>

