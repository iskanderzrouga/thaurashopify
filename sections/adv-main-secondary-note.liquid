{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="{{ section.settings.section_id }}" class="section-{{ section.id }}-padding px-5" style="">
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div
      class="border gap-6 md:gap-12 p-4 md:px-10 md:py-6"
      style="background-color: {{ section.settings.bgcolor }}; border-color: {{ section.settings.border_color }};"
    >
      {% if section.settings.description != blank %}
        <div class="text-[17px] md:text-[18px] font-normal !leading-tight text-[#333]">
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>

    {% if section.settings.button_label != blank %}
      <div class="w-full mt-6">
        <a
          href="{{ section.settings.button_url }}"
          class="new-button--adv-secondary"
        >
          {{ section.settings.button_label }}
          {%- render 'icon-arrow-right' -%}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "ADV 2 Note",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#EFF8FE"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#FF3000"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "ADV 2 Note"
    }
  ]
}
{% endschema %}
