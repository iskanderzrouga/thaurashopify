{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding px-5 relative" style="background-color: {{ section.settings.bgcolor }}">
  {% if section.settings.background_image != blank %}
    {{
      section.settings.background_image
      | image_url: width: 1920
      | image_tag: class: 'w-full absolute top-0 left-0 h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div
    class="mx-auto w-full relative rounded-[16px]"
    style="max-width: {{ section.settings.max_width }}px;"
  >
    <div class="relative flex flex-col items-center justify-center gap-8 md:gap-12">
      <div class="flex flex-col items-center justify-center gap-3">
        {% if section.settings.heading != blank %}
          <h2
            class="text-[26px] md:text-[40px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>

      <div class="w-full max-md:hidden grid grid-cols-3 gap-4 items-center">
        <div class="flex flex-col w-full gap-4">
          {% for block in section.blocks %}
            {% assign parity = forloop.index0 | modulo: 2 %}
            {% if parity == 0 %}
              {% render 'nl-img-center-card', block: block %}
            {% endif %}
          {% endfor %}
        </div>

        <div>
          {% if section.settings.image != blank %}
            {{ section.settings.image | image_url: width: 400 | image_tag: class: 'w-full', sizes: '400px' }}
          {% endif %}
        </div>

        <div class="flex flex-col w-full gap-4">
          {% for block in section.blocks %}
            {% assign parity = forloop.index0 | modulo: 2 %}
            {% if parity == 1 %}
              {% render 'nl-img-center-card', block: block %}
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="w-full md:hidden">
        <div class="nl-image-center_carousel splide">
          <div class="splide__track max-md:mt-[60px]">
            <div class="splide__list md:!grid md:!grid-cols-5 md:gap-5">
              {% for block in section.blocks %}
                <div class="splide__slide nl-image-center_carousel--card-{{forloop.index}}">
                  <div
                    class="h-full rounded-[12px] bg-[#F8F4F1] w-full flex items-center p-5 gap-[10px]"
                  >
                    {% if block.settings.image_mobile != blank %}
                      {{
                        block.settings.image_mobile
                        | image_url: width: 85
                        | image_tag: class: 'max-w-[25%]', sizes: '85px'
                      }}
                    {% endif %}

                    <div class="flex flex-col gap-1">
                      <div class="w-12 h-12 bg-[#A67C58] rounded-[50px] hidden md:flex items-center justify-center text-center text-[30px] font-bold !leading-tight text-[#fff]">
                        {{ forloop.index }}
                      </div>

                      <div class="flex flex-col gap-1">
                        {% if block.settings.heading != blank %}
                          <div class="text-[16px] md:text-[20px] font-bold !leading-tight text-[#121212]">
                            {{ block.settings.heading }}
                          </div>
                        {% endif %}

                        {% if block.settings.description != blank %}
                          <div class="text-[#121212] text-[14px] md:text-lg font-normal !leading-tight">
                            {{ block.settings.description }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding .splide__pagination  {
      bottom: auto;
      top: -68px;
  }
  .section-{{ section.id }}-padding .splide__pagination__page.is-active {
      background-color: #fff;
  }
  .section-{{ section.id }}-padding .splide__pagination__page {
    width: 48px;
    height: 48px;
    transform: unset;
    color: #084C25;
    background: #fff;
    border: 1px solid white;
    font-size: 24px;
    font-weight: bold;
    opacity: 1;
  }
  .section-{{ section.id }}-padding .splide__pagination__page.is-active {
    background: #084C25;
    color: #fff;
  }
  .section-{{ section.id }}-padding .splide__pagination{
    justify-content: space-between;
    max-width: 360px;
    margin: auto;
    gap: 10px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .nl-image-center_carousel', {
      perPage: 1,
      perMove: 1,
      rewind: true,
      gap: '20px',
      pagination: true,
      arrows: true,
      mediaQuery: 'min',
      padding: { right: 0 },
      breakpoints: {
        768: {
          destroy: true,
        },
      },
    });

    splide.on('pagination:mounted', function (data) {
      data.items.forEach(function (item, index) {
        item.button.textContent = index + 1; // Replace dot with number
      });
    });

    splide.mount();
  });
</script>

<style>
  .section-{{ section.id }}-padding .nl-image-center_carousel .splide__arrow--prev {
    background: white;
    opacity: 1;
    border: 1px solid #084C25;
    left: -10px;
  }
  .section-{{ section.id }}-padding .nl-image-center_carousel .splide__arrow--next {
    background: white;
    border: 1px solid #084C25;
    opacity: 1;
    right: -10px;
  }
  .section-{{ section.id }}-padding .nl-image-center_carousel .splide__arrow svg {
    fill: #084C25;
    width: 12px;
    height: 12px;
  }
</style>

{% schema %}
{
  "name": "NL Image Center Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "checkbox",
      "id": "heading_m_center",
      "label": "Heading Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "heading_d_center",
      "label": "Heading Desktop Center",
      "default": true
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "description_m_center",
      "label": "Description Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "description_d_center",
      "label": "Description Desktop Center",
      "default": false
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#121212"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image Mobile"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NL Image Center Cards"
    }
  ]
}
{% endschema %}
