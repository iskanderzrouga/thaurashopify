{% assign repeat_count = section.settings.repeat_count %}
{% assign animation_max_width = section.settings.animation_max_width %}
{% assign animation_max_width_px = animation_max_width | append: 'px' %}
{% assign animation_length = section.settings.animation_length %}
{% assign total_width = repeat_count | times: animation_max_width %}
{% assign half_width = total_width | divided_by: 2 %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .qb-animation__item {
    max-width: {{ animation_max_width }}px;
    min-width: {{ animation_max_width }}px;
  }

  .section-{{ section.id }}-padding .qb-animation {
    animation: NlAnimation-{{ section.id }} {{ animation_length }}s linear infinite;
    width: {{ total_width }}px;
  }
  @keyframes NlAnimation-{{ section.id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-{{half_width}}px);
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="w-full section-{{ section.id }}-padding px-5"
  style="background-color: {{ section.settings.bgcolor }};"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="w-full overflow-hidden">
      <div class="qb-animation flex items-center">
        {% for i in (1..repeat_count) %}
            <div class="qb-animation__item px-1 flex items-center gap-2">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'slider' %}
              {% if block.settings.image != blank %}
                <div class="">
                  {{
                    block.settings.image
                    | image_url: width: animation_max_width
                    | image_tag: class: 'w-full h-fit object-contain', sizes: animation_max_width_px
                  }}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ADV Main Animation",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "header",
      "content": "Animation Settings"
    },
    {
      "type": "range",
      "id": "repeat_count",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "x",
      "label": "Repeat Count",
      "default": 5
    },
    {
      "type": "range",
      "id": "animation_length",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "x",
      "label": "Animation Length",
      "default": 50
    },
    {
      "type": "range",
      "id": "animation_max_width",
      "min": 100,
      "max": 2000,
      "step": 20,
      "unit": "px",
      "label": "Min Width",
      "default": 360
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slider",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ADV Main Animation"
    }
  ]
}
{% endschema %}
