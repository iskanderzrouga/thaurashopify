{% comment %}
  Section: Quick Answers (FAQ Accordion)
  Description: Accordion-style FAQ section with collapsible questions/answers and CTA button
  Usage: Add to any page for FAQ content with customizable styling
  Uses: Native HTML5 <details> element for reliability and accessibility
{% endcomment %}

{{ 'section-adv-quick-answers.css' | asset_url | stylesheet_tag }}

<div 
  class="adv-qa-wrapper{% if section.settings.custom_class != blank %} {{ section.settings.custom_class }}{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="adv-quick-answers"
  data-close-others="{{ section.settings.close_others }}"
  style="
    --adv-qa-inner-bg: {{ section.settings.background_color | default: '#F4F4F6' }};
    --adv-qa-heading-color: {{ section.settings.heading_color | default: '#000000' }};
    --adv-qa-question-color: {{ section.settings.question_color | default: '#000000' }};
    --adv-qa-answer-color: {{ section.settings.answer_color | default: '#4A4A4A' }};
    --adv-qa-border-color: {{ section.settings.border_color | default: '#25505F' }};
    --adv-qa-icon-color: {{ section.settings.icon_color | default: '#25505F' }};
    --adv-qa-cta-bg: {{ section.settings.cta_bg_color | default: '#00C249' }};
    --adv-qa-cta-shadow: {{ section.settings.cta_shadow_color | default: '#028332' }};
    --adv-qa-cta-text: {{ section.settings.cta_text_color | default: '#FFFFFF' }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="page-width">
    <div class="adv-qa-container">
      <div class="adv-qa-inner">
        <div class="adv-qa-content">
          
          {% if section.settings.heading != blank %}
            <h2 class="adv-qa__heading">
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.blocks.size > 0 %}
            <div class="adv-qa__accordion-list">
              {% for block in section.blocks %}
                {% if block.type == 'accordion_item' %}
                  <details 
                    class="adv-qa__accordion-item" 
                    {{ block.shopify_attributes }}
                    data-block-id="{{ block.id }}"
                    {% if section.settings.open_first and forloop.first %}open{% endif %}
                  >
                    <summary class="adv-qa__question">
                      <span class="adv-qa__question-text">
                        {{ block.settings.question }}
                      </span>
                      <span class="adv-qa__icon" aria-hidden="true">
                        <svg class="adv-qa__icon-svg" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path class="adv-qa__icon-horizontal" d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                          <path class="adv-qa__icon-vertical" d="M12 5V19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </span>
                    </summary>

                    <div class="adv-qa__answer">
                      <div class="adv-qa__answer-inner">
                        <div class="adv-qa__answer-content rte">
                          {{ block.settings.answer }}
                        </div>
                      </div>
                    </div>
                  </details>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
            <div class="adv-qa__cta-container">
              <a
                href="{{ section.settings.cta_url }}"
                class="adv-qa__cta-button"
                {% if section.settings.cta_target %}target="_blank" rel="noopener noreferrer"{% endif %}
              >
                {{ section.settings.cta_text }}
              </a>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</div>

<style>
  {% if section.settings.heading_font %}
    .adv-qa-wrapper[data-section-id="{{ section.id }}"] .adv-qa__heading {
      font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
      font-weight: {{ section.settings.heading_font.weight }};
      font-style: {{ section.settings.heading_font.style }};
    }
    {{ section.settings.heading_font | font_face: font_display: 'swap' }}
  {% endif %}

  {% if section.settings.body_font %}
    .adv-qa-wrapper[data-section-id="{{ section.id }}"] .adv-qa__question-text,
    .adv-qa-wrapper[data-section-id="{{ section.id }}"] .adv-qa__answer-content {
      font-family: {{ section.settings.body_font.family }}, {{ section.settings.body_font.fallback_families }};
      font-weight: {{ section.settings.body_font.weight }};
      font-style: {{ section.settings.body_font.style }};
    }
    {{ section.settings.body_font | font_face: font_display: 'swap' }}
  {% endif %}

  {% if section.settings.button_font %}
    .adv-qa-wrapper[data-section-id="{{ section.id }}"] .adv-qa__cta-button {
      font-family: {{ section.settings.button_font.family }}, {{ section.settings.button_font.fallback_families }};
      font-weight: {{ section.settings.button_font.weight }};
      font-style: {{ section.settings.button_font.style }};
    }
    {{ section.settings.button_font | font_face: font_display: 'swap' }}
  {% endif %}
</style>

<script>
  (function() {
    'use strict';

    // Initialize Quick Answers Accordion
    function initQuickAnswers() {
      const sections = document.querySelectorAll('[data-section-type="adv-quick-answers"]');
      
      sections.forEach(section => {
        const closeOthers = section.getAttribute('data-close-others') === 'true';
        const accordionItems = section.querySelectorAll('.adv-qa__accordion-item');
        
        if (!closeOthers) return;
        
        accordionItems.forEach(item => {
          item.addEventListener('toggle', function(e) {
            if (this.open) {
              // Close all other items in the same section
              accordionItems.forEach(otherItem => {
                if (otherItem !== this && otherItem.open) {
                  otherItem.open = false;
                }
              });
            }
          });
        });
      });
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initQuickAnswers);
    } else {
      initQuickAnswers();
    }

    // Reinitialize on Shopify section events (Theme Editor)
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', initQuickAnswers);
      document.addEventListener('shopify:section:reorder', initQuickAnswers);
    }
  })();
</script>

