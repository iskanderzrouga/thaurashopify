{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5"
  style="background-color: {{ section.settings.bgcolor }};"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      {% if section.settings.heading != blank %}
        <h2
          class="text-[26px] md:text-[42px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.description_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class="grid grid-cols-2 gap-10 items-center w-full">
        {% assign max_width = section.settings.max_width | divided_by: 2 %}
        {% assign max_width_px = max_width | append: 'px' %}
        <div class="flex flex-col items-center justify-center">
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: max_width
              | image_tag:
                class: 'w-full section-main-image max-h-[120px] md:max-h-[220px] object-contain',
                sizes: max_width_px
            }}
          {% endif %}
        </div>
        <div class="flex flex-col items-center justify-center">
          {% if section.settings.image2 != blank %}
            {{
              section.settings.image2
              | image_url: width: max_width
              | image_tag:
                class: 'w-full section-main-image max-h-[120px] md:max-h-[220px] object-contain',
                sizes: max_width_px
            }}
          {% endif %}
        </div>
      </div>

      {% if section.blocks.size > 0 %}
        <div class="w-full flex flex-col gap-2 md:gap-5">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'row' %}
                <div
                  class="border rounded-[300px] grid grid-cols-2 md:min-h-[80px]"
                  style="border-color: {{ block.settings.border_color }};"
                >
                  <div
                    class="flex text-right items-center justify-end gap-3 py-2 px-2 md:px-6 rounded-l-[300px]"
                    style="background-color: {{ block.settings.bgcolor }}; background-color: {{ block.settings.bgcolor }};"
                  >
                    <div class="flex flex-col">
                      {% if block.settings.description != blank %}
                        <div
                          class="text-[14px] md:text-[20px] font-normal !leading-tight text-[#000]"
                          style="color: {{ block.settings.description_color }};"
                        >
                          {{ block.settings.description }}
                        </div>
                      {% endif %}
                      {% if block.settings.sub != blank %}
                        <div
                          class="text-[14px] md:text-[20px] font-normal !leading-tight text-[#000]"
                          style="color: {{ block.settings.sub_color }};"
                        >
                          {{ block.settings.sub }}
                        </div>
                      {% endif %}
                    </div>

                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 30
                        | image_tag: class: 'w-full rounded-[30px] max-w-[14px] md:max-w-[30px] h-fit', sizes: '30px'
                      }}
                    {% endif %}
                  </div>
                  <div
                    class="flex text-left items-center justify-start gap-3 py-2 px-2 md:px-6 rounded-r-[300px]"
                    style="background-color: {{ block.settings.bgcolor1 }}; background-color: {{ block.settings.bgcolor1 }};"
                  >
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image1
                        | image_url: width: 30
                        | image_tag: class: 'w-full rounded-[30px] max-w-[14px] md:max-w-[30px] h-fit', sizes: '30px'
                      }}
                    {% endif %}
                    <div class="flex flex-col">
                      {% if block.settings.description1 != blank %}
                        <div
                          class="text-[14px] md:text-[20px] font-normal !leading-tight text-[#000]"
                          style="color: {{ block.settings.description_color1 }};"
                        >
                          {{ block.settings.description1 }}
                        </div>
                      {% endif %}
                      {% if block.settings.sub1 != blank %}
                        <div
                          class="text-[14px] md:text-[20px] font-normal !leading-tight text-[#000]"
                          style="color: {{ block.settings.sub_color1 }};"
                        >
                          {{ block.settings.sub1 }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "RB Compare",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "checkbox",
      "id": "heading_m_center",
      "label": "Heading Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "heading_d_center",
      "label": "Heading Desktop Center",
      "default": true
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "description_m_center",
      "label": "Description Mobile Center",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "description_d_center",
      "label": "Description Desktop Center",
      "default": false
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#121212"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "image_right",
      "label": "Image Right",
      "default": false
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "richtext",
      "id": "btn_bottom_text",
      "label": "Btn Bottom Text"
    },
    {
      "type": "color",
      "id": "btn_bottom_text_color",
      "label": "Buttom Bottom Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#084C25"
        },
        {
          "type": "color",
          "id": "bgcolor",
          "label": "Background Color",
          "default": "#084C25"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "sub",
          "label": "Sub"
        },
        {
          "type": "color",
          "id": "sub_color",
          "label": "Sub Color",
          "default": "#000"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "color",
          "id": "bgcolor1",
          "label": "Background Color 1",
          "default": "#F6F7EF"
        },
        {
          "type": "richtext",
          "id": "description1",
          "label": "Description 1"
        },
        {
          "type": "color",
          "id": "description_color1",
          "label": "Description Color 1",
          "default": "#000"
        },
        {
          "type": "richtext",
          "id": "sub1",
          "label": "Sub 1"
        },
        {
          "type": "color",
          "id": "sub_color1",
          "label": "Sub Color 1",
          "default": "#000"
        },
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image 1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RB Compare"
    }
  ]
}
{% endschema %}
