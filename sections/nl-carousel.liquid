{% assign max_width = section.settings.max_width | plus: 0 %}
{% assign padding_left = 1420 | minus: max_width | divided_by: 2 %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (min-width: 1240px) {
    .section-{{ section.id }}-padding .nl-carousel__main-carousel {
        padding-left: {{ padding_left }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding relative"
  style="background-color: {{ section.settings.bgcolor }}"
>
  {% if section.settings.bg_img != blank %}
    {{
      section.settings.bg_img
      | image_url: width: 1920
      | image_tag: class: 'w-full absolute top-0 left-0 h-full object-cover', sizes: '1920px'
    }}
  {% endif %}
  <div class="mx-auto w-full max-w-[1420px] flex flex-col items-center justify-center gap-4 md:gap-8 relative">
    <div
      class="flex {% unless section.settings.heading_top %} md:hidden {% endunless %} flex-col items-center justify-center gap-4 text-center mx-auto"
      style="max-width: {{ section.settings.max_width }}px;"
    >
      {% if section.settings.heading != blank %}
        <h2
          class="text-[26px] md:text-[36px] font-bold !leading-tight"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[16px] md:text-[20px] font-normal !leading-[1.5] text-[#000]"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>

    <div class="nl-carousel__main-carousel w-full {% unless section.settings.heading_top %} md:flex md:items-center md:gap-10 {% endunless %}">
      {% unless section.settings.heading_top %}
        <div
          class="hidden md:flex flex-col justify-center gap-5 md:max-w-[30%] md:min-w-[30%]"
        >
          {% if section.settings.heading != blank %}
            <h2
              class="text-[26px] md:text-[36px] font-bold !leading-tight"
              style="color: {{ section.settings.heading_color }};"
            >
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.settings.description != blank %}
            <div
              class="text-[16px] md:text-[20px] font-normal !leading-[1.5] text-[#000]"
              style="color: {{ section.settings.text_color }};"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}

          <div class="flex flex-col justify-center gap-[10px]">
            {% if section.settings.button_label != blank %}
              <div class="w-full">
                <a
                  href="{{ section.settings.button_url }}"
                  class="new-button--{{section.settings.button_type}} nl-smooth-scroll-btn"
                  style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
                >
                  {{ section.settings.button_label }}
                  {%- render 'icon-arrow-right' -%}
                </a>
              </div>
            {% endif %}

            {% if section.settings.product_bottom_label != blank %}
              <div class="flex items-center gap-2 mt-3 md:mt-4 relative w-fit">
                {% if section.settings.bottom_label_icon != blank %}
                  {{
                    section.settings.bottom_label_icon
                    | image_url: width: 24
                    | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
                  }}
                {% endif %}

                <div
                  class="text-[15px] md:text-[15px] font-normal !leading-tight"
                  style="color: {{ section.settings.bottom_label_color }};"
                >
                  {{ section.settings.product_bottom_label }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endunless %}

      <div class="w-full flex-1 {% if section.settings.show_arrows %}pb-[30px] md:pb-[100px]{% else %}pb-0{% endif %}">
        {% if section.blocks.size > 0 %}
          <div class="splide nl-carousel">
            <div class="splide__track">
              <div class="splide__list">
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'row' %}
                      <div class="splide__slide">
                        <div class="nl-carousel-card flex flex-col h-full border border-[#AAAAAA] rounded-[12px] mx-auto overflow-hidden">
                          {% if block.settings.image != blank %}
                            <div
                              class="w-full overflow-hidden"
                              style="height: {{ section.settings.image_height_mobile }}px;"
                            >
                              {{
                                block.settings.image
                                | image_url: width: 500
                                | image_tag: class: 'w-full h-full object-cover', sizes: '500px'
                              }}
                            </div>
                          {% endif %}

                          <div class="flex flex-col justify-between flex-1 bg-white">
                            <div class="px-3 md:px-4 py-3 md:py-4 flex flex-col {% if block.settings.center_text %} items-center justify-center text-center {% endif %} gap-[8px] md:gap-[10px]">
                              {% if block.settings.stars != blank %}
                                {{
                                  block.settings.stars
                                  | image_url: width: 90
                                  | image_tag: class: 'w-full max-w-[80px] md:max-w-[90px]', sizes: '90px'
                                }}
                              {% endif %}

                              {% if block.settings.tag != blank %}
                                <div class="text-[11px] md:text-[12px] font-normal !leading-tight text-[#fff] px-2 md:px-3 py-1 md:py-1.5 rounded-[6px] bg-[#247042] w-fit">
                                  {{ block.settings.tag }}
                                </div>
                              {% endif %}

                              {% if block.settings.heading != blank %}
                                <div class="text-[18px] md:text-[22px] font-bold !leading-tight text-[#000]">
                                  {{ block.settings.heading }}
                                </div>
                              {% endif %}

                              {% if block.settings.description != blank %}
                                <div class="text-[16px] md:text-[16px] font-normal !leading-[1.4] text-[#000]">
                                  {{ block.settings.description }}
                                </div>
                              {% endif %}

                              {% if block.settings.testimonial_text != blank %}
                                <div class="mt-2 flex items-start testimonial-quote {% if block.settings.center_text %} justify-center {% endif %}">
                                  <div class="text-[28px] md:text-[32px] leading-[0] font-bold text-[#247042] mr-1">
                                    "
                                  </div>
                                  <div class="text-[12px] md:text-[13px] font-normal italic !leading-[1.5] text-[#333]">
                                    {{ block.settings.testimonial_text }}
                                  </div>
                                </div>
                              {% endif %}
                            </div>

                            {% if block.settings.name != blank %}
                              <div class="nl-carousel-card--bottom bg-[#F6F6F6] py-2 md:py-2.5 px-3 md:px-4 flex items-center justify-between gap-2">
                                {% if block.settings.name != blank %}
                                  <div class="flex items-center gap-2">
                                    {% if block.settings.avatar != blank %}
                                      {{
                                        block.settings.avatar
                                        | image_url: width: 20
                                        | image_tag:
                                          class: 'w-full max-w-[18px] md:max-w-[20px] rounded-full',
                                          sizes: '20px'
                                      }}
                                    {% endif %}
                                    <div class="text-[13px] md:text-[14px] font-bold !leading-tight text-[#000]">
                                      {{ block.settings.name }}
                                    </div>
                                  </div>
                                {% endif %}

                                {% if block.settings.verified != blank or block.settings.icon != blank %}
                                  <div class="flex items-center gap-1.5">
                                    {% if block.settings.icon != blank %}
                                      {{
                                        block.settings.icon
                                        | image_url: width: 12
                                        | image_tag: class: 'w-full max-w-[11px] md:max-w-[12px]', sizes: '12px'
                                      }}
                                    {% endif %}
                                    {% if block.settings.verified != blank %}
                                      <div class="text-[11px] md:text-[12px] font-[300] !leading-tight text-[#000] whitespace-nowrap">
                                        {{ block.settings.verified }}
                                      </div>
                                    {% endif %}
                                  </div>
                                {% endif %}
                              </div>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="w-full flex {% unless section.settings.heading_top %} md:hidden {% endunless %} flex-col items-center justify-center gap-[10px] {% if section.settings.show_arrows %}mt-[60px] md:mt-0{% else %}mt-8{% endif %}">
      {% if section.settings.button_label != blank %}
        <div class="w-full max-w-[500px] mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--{{section.settings.button_type}} nl-smooth-scroll-btn"
            style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
          >
            {{ section.settings.button_label }}
            {% if section.settings.button_type == 'primary' %}
              {%- render 'icon-arrow-right' -%}
            {% elsif section.settings.button_type == 'secondary' %}
              {%- render 'icon-arrow-right-secondary' -%}
            {% endif %}
          </a>
        </div>
      {% endif %}

      {% if section.settings.product_bottom_label != blank %}
        <div class="flex items-center gap-2 mt-3 md:mt-4 relative w-fit mx-auto">
          {% if section.settings.bottom_label_icon != blank %}
            {{
              section.settings.bottom_label_icon
              | image_url: width: 24
              | image_tag: class: 'w-full max-w-[20px] md:max-w-[24px]'
            }}
          {% endif %}

          <div
            class="text-[15px] md:text-[15px] font-normal !leading-tight"
            style="color: {{ section.settings.bottom_label_color }};"
          >
            {{ section.settings.product_bottom_label }}
          </div>
        </div>
      {% endif %}

      {% if section.settings.product_bottom_text != blank %}
        <div class="text-[14px] md:text-[14px] font-[300] !leading-tight text-[#000]">
          {{ section.settings.product_bottom_text }}
        </div>
      {% endif %}

      {% if section.settings.show_cards %}
        <div class="grid grid-cols-3 gap-2 md:gap-7 mt-5 md:mt-8">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'card' %}
                <div
                  class="rounded-lg md:rounded-[20px] border border-white flex flex-col gap-3 p-3 md:p-6 items-center text-center"
                  style="background: linear-gradient(267.61deg, #0F4A34 0%, #063125 97.47%);"
                >
                  {% if block.settings.heading != blank %}
                    <div class="text-[18px] md:text-[52px] font-bold !leading-tight text-[#fff]">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div class="text-[10px] md:text-[25px] font-normal !leading-[1.4] text-[#fff]">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  // Smooth scroll functionality
  document.querySelectorAll('.nl-smooth-scroll-btn').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      var href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        var target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });

  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .nl-carousel', {
      perPage: {{section.settings.desktop_carousel_count}},
      perMove: 1,
      rewind: true,
      gap: '20px',
      trimSpace: false,
      pagination: false,
      arrows: {{ section.settings.show_arrows }},
      padding: { left: '0px', right: '100px' },
      breakpoints: {
        1240: {
          perPage: 2,
          perMove: 1,
          gap: '16px',
          padding: { left: '0px', right: '0px' },
        },
        767: {
          perPage: 1,
          perMove: 1,
          pagination: true,
          gap: '12px',
          padding: { right: '0', left: '0' },
        },
      },
    });
    splide.mount();
  });
</script>

<style>
  .section-{{ section.id }}-padding .new-button--primary svg,
  .section-{{ section.id }}-padding .new-button--primary svg path,
  .section-{{ section.id }}-padding .new-button--secondary svg,
  .section-{{ section.id }}-padding .new-button--secondary svg path,
  .section-{{ section.id }}-padding .new-button--tertiary svg,
  .section-{{ section.id }}-padding .new-button--tertiary svg path {
    fill: {{ section.settings.button_text_color }} !important;
    stroke: {{ section.settings.button_text_color }} !important;
  }

  {% if section.settings.show_arrows %}
  .section-{{ section.id }}-padding .nl-carousel .splide__arrow--prev {
    bottom: -120px;
    top: auto;
    width: 54px;
    height: 54px;
    background: transparent;
    border: 1px solid {{ section.settings.arrow_color }};
    right: auto;
    {% if section.settings.heading_top %}
      left: calc(50% - 150px);
    {% else %}
      left: calc(50% - 80px);
    {% endif %}
  }
  .section-{{ section.id }}-padding .nl-carousel .splide__arrow--next {
    bottom: -120px;
    top: auto;
    width: 54px;
    height: 54px;
    background: transparent;
    border: 1px solid {{ section.settings.arrow_color }};
    {% if section.settings.heading_top %}
      right: calc(50% - 10px);
    {% else %}
      right: calc(50% - 80px);
    {% endif %}
  }
  .section-{{ section.id }}-padding .nl-carousel .splide__arrow svg {
    fill: {{ section.settings.arrow_color }};
  }
  {% else %}
  .section-{{ section.id }}-padding .nl-carousel .splide__arrow {
    display: none !important;
  }
  {% endif %}
  .section-{{ section.id }}-padding .nl-carousel .splide__pagination__page {
    width: 10px;
    height: 10px;
    background: transparent;
    border: 1px solid {{ section.settings.arrow_color }};
  }
  .section-{{ section.id }}-padding .nl-carousel .splide__pagination__page.is-active {
    width: 40px;
    border-radius: 20px;
    background: {{ section.settings.arrow_color }};
    opacity: 1;
    transform: unset;
  }
  .section-{{ section.id }}-padding .nl-carousel .splide__pagination {
    {% if section.settings.show_arrows %}
    bottom: -32px;
    {% else %}
    bottom: -20px;
    {% endif %}
    position: relative;
    display: none;
  }
  .section-{{ section.id }}-padding {
    padding-left: 1.25rem;
    padding-right: 1.25rem;
  }
  .section-{{ section.id }}-padding .nl-carousel-card {
    max-width: {{ section.settings.card_max_width_mobile }}px;
  }
  @media screen and (max-width: 767px) {
    /* Fix carousel container bottom padding */
    .section-{{ section.id }}-padding .nl-carousel .splide__slide .nl-carousel-card {
      margin-bottom: 0;
      padding-bottom: 0;
    }

    /* Equal padding for card content */
    .section-{{ section.id }}-padding .nl-carousel .splide__slide .nl-carousel-card > div > div:first-child {
      padding-top: 12px !important;
      padding-bottom: 12px !important;
    }

    /* Equal padding for bottom section */
    .section-{{ section.id }}-padding .nl-carousel .splide__slide .nl-carousel-card > div > div:last-child {
      padding-top: 8px !important;
      padding-bottom: 8px !important;
    }

    /* Fix arrows position */
    .section-{{ section.id }}-padding .nl-carousel .splide__arrow--prev {
      right: auto;
      left: calc(50% - 80px);
    }
    .section-{{ section.id }}-padding .nl-carousel .splide__arrow--next {
      right: calc(50% - 80px);
    }

    /* Fix testimonial quote margins */
    .section-{{ section.id }}-padding .nl-carousel .splide__slide .testimonial-quote {
      display: block !important;
      margin-top: 8px !important;
      margin-bottom: 0 !important;
      text-align: center;
    }
    .section-{{ section.id }}-padding .nl-carousel .splide__slide .testimonial-quote > div:first-child {
      display: inline-block;
      margin-bottom: 0;
    }

    /* Fix pagination position */
    .section-{{ section.id }}-padding .nl-carousel .splide__pagination {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-top: 0 !important;
    }

    /* Equal height for all slides */
    .section-{{ section.id }}-padding .nl-carousel .splide__slide {
      height: auto;
      padding-bottom: 0;
      margin-bottom: 0;
    }
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .nl-carousel .splide__slide > div > div:first-child {
      height: {{ section.settings.image_height_desktop }}px !important;
    }
    .section-{{ section.id }}-padding .nl-carousel-card {
      max-width: {{ section.settings.card_max_width }}px;
    }
  }
</style>

