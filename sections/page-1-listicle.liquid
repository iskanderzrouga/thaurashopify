<style>
    .listicle-page {
        /* Backgrounds - Subtle warm white */
        --bg: #FDFCFB;
        --bg-card: #FFFFFF;

        /* Text - Much darker for readability */
        --text: #111111;
        --text-secondary: #1F1F1F;
        --text-muted: #555555;

        /* Accent colors */
        --accent: #9A4A00;
        --accent-light: #FEF3C7;

        /* Other colors */
        --sage: #166534;
        --sage-light: #DCFCE7;
        --border: #E0E0E0;

        --danger: #B91C1C;
        --danger-light: #FEE2E2;
        --shadow: rgba(0, 0, 0, 0.08);

        /* Typography */
        --font-serif: 'Source Serif 4', Georgia, 'Times New Roman', serif;
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-hand: 'Caveat', cursive;
    }

    .listicle-page * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .listicle-page {
        font-family: var(--font-serif);
        font-size: 20px;
        font-weight: 450;
        line-height: 1.85;
        color: var(--text);
        background: var(--bg);
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
    }

    /* Reading Progress Bar */
    .listicle-progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: var(--accent);
        width: 0%;
        z-index: 1000;
        transition: width 0.1s ease-out;
    }

    /* Header */
    .listicle-site-header {
        background: var(--bg);
        border-bottom: 1px solid var(--border);
        padding: 16px 0;
        position: sticky;
        top: 0;
        z-index: 99;
    }

    .listicle-header-inner {
        max-width: 640px;
        margin: 0 auto;
        padding: 0 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .listicle-blog-name {
        font-family: var(--font-sans);
        font-size: 14px;
        font-weight: 600;
        color: var(--text);
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .listicle-blog-name span {
        color: var(--accent);
    }

    .listicle-header-date {
        font-family: var(--font-sans);
        font-size: 13px;
        color: var(--text-muted);
    }

    /* Main Container */
    .listicle-container {
        max-width: 640px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* Article Header */
    .listicle-article-header {
        padding: 48px 0 32px;
        text-align: center;
    }

    .listicle-article-label {
        font-family: var(--font-sans);
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: var(--accent);
        margin-bottom: 16px;
        display: inline-block;
    }

    .listicle-page h1 {
        font-family: var(--font-serif);
        font-size: clamp(34px, 6vw, 48px);
        font-weight: 700;
        line-height: 1.2;
        color: var(--text);
        margin-bottom: 24px;
        letter-spacing: -0.5px;
    }

    .listicle-article-subtitle {
        font-family: var(--font-serif);
        font-size: 19px;
        font-style: italic;
        color: var(--text-secondary);
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Author Byline */
    .listicle-byline {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 14px;
        padding: 24px 0;
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
        margin: 0 0 32px;
    }

    .listicle-byline-avatar {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid var(--border);
    }

    .listicle-byline-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .listicle-byline-info {
        text-align: left;
    }

    .listicle-byline-name {
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 15px;
        color: var(--text);
    }

    .listicle-byline-meta {
        font-family: var(--font-sans);
        font-size: 13px;
        color: var(--text-muted);
    }

    /* Hero Image */
    .listicle-hero-image {
        margin: 0 -24px 40px;
        position: relative;
    }

    @media (min-width: 800px) {
