            const pastTrigger = triggerRect.bottom < 0;
            const viewingProduct = productRect.top < window.innerHeight && productRect.bottom > 0;

            // Once activated, stays visible except when viewing product section
            if (pastTrigger) {
                listicleStickyActivated = true;
            }

            if (listicleStickyActivated && !viewingProduct) {
                stickyCta.classList.add('visible');
            } else {
                stickyCta.classList.remove('visible');
            }
        }
    });

    // Sticky CTA button click behavior
    document.getElementById('listicleStickyCtaBtn').addEventListener('click', function(e) {
