<style>
    .listicle-page {
        /* Backgrounds - Subtle warm white */
        --bg: #FDFCFB;
        --bg-card: #FFFFFF;

        /* Text - Much darker for readability */
        --text: #111111;
        --text-secondary: #1F1F1F;
        --text-muted: #555555;

        /* Accent colors */
        --accent: #9A4A00;
        --accent-light: #FEF3C7;

        /* Other colors */
        --sage: #166534;
        --sage-light: #DCFCE7;
        --border: #E0E0E0;

        --danger: #B91C1C;
        --danger-light: #FEE2E2;
        --shadow: rgba(0, 0, 0, 0.08);

        /* Typography */
        --font-serif: 'Source Serif 4', Georgia, 'Times New Roman', serif;
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-hand: 'Caveat', cursive;
    }

    .listicle-page * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .listicle-page {
        font-family: var(--font-serif);
        font-size: 20px;
        font-weight: 450;
        line-height: 1.85;
        color: var(--text);
        background: var(--bg);
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
    }

    /* Reading Progress Bar */
    .listicle-progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: var(--accent);
        width: 0%;
        z-index: 1000;
        transition: width 0.1s ease-out;
    }

    /* Header */
    .listicle-site-header {
        background: var(--bg);
        border-bottom: 1px solid var(--border);
        padding: 12px 0;
    }

    .listicle-header-inner {
        max-width: 640px;
        margin: 0 auto;
        padding: 0 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .listicle-blog-name {
        display: flex;
        align-items: center;
    }

    .listicle-header-logo {
        height: 32px;
        width: auto;
    }

    .listicle-header-date {
        font-family: var(--font-sans);
        font-size: 13px;
        color: var(--text-muted);
    }

    /* Main Container */
    .listicle-container {
        max-width: 640px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* Article Header */
    .listicle-article-header {
        padding: 20px 0 12px;
        text-align: center;
    }

    .listicle-article-label {
        font-family: var(--font-sans);
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: var(--accent);
        margin-bottom: 10px;
        display: inline-block;
    }

    .listicle-page h1 {
        font-family: var(--font-serif);
        font-size: clamp(26px, 5vw, 38px);
        font-weight: 700;
        line-height: 1.2;
        color: var(--text);
        margin-bottom: 12px;
        letter-spacing: -0.5px;
    }

    .listicle-article-subtitle {
        font-family: var(--font-serif);
        font-size: 16px;
        font-style: italic;
        color: var(--text-secondary);
        line-height: 1.5;
        max-width: 500px;
        margin: 0 auto;
    }

    /* Author Byline */
    .listicle-byline {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 12px 0;
        margin: 0 0 16px;
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
    }

    .listicle-byline-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid var(--border);
    }

    .listicle-byline-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .listicle-byline-info {
        text-align: left;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .listicle-byline-name {
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 13px;
        color: var(--text);
    }

    .listicle-byline-meta {
        font-family: var(--font-sans);
        font-size: 12px;
        color: var(--text-muted);
    }

    .listicle-byline-meta::before {
        content: "·";
        margin-right: 8px;
    }

    /* Hero Image */
    .listicle-hero-image {
        margin: 0 -24px 24px;
        position: relative;
    }

    @media (min-width: 800px) {
        .listicle-hero-image {
            margin: 0 -60px 40px;
            border-radius: 8px;
            overflow: hidden;
        }
    }

    .listicle-hero-image img {
        width: 100%;
        max-width: 340px;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    @media (min-width: 800px) {
        .listicle-hero-image img {
            max-width: 420px;
        }
    }

    .listicle-hero-caption {
        font-family: var(--font-sans);
        font-size: 11px;
        color: var(--text-muted);
        text-align: center;
        padding: 6px 24px;
        font-style: italic;
    }

    /* Article Images */
    .listicle-article-image {
        margin: 28px 0;
        border-radius: 8px;
        overflow: hidden;
        max-height: 400px;
    }

    .listicle-article-image img {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        object-position: center top;
        display: block;
    }

    .listicle-article-image figcaption {
        font-family: var(--font-sans);
        font-size: 13px;
        color: var(--text-muted);
        padding: 10px 0;
        text-align: center;
    }

    /* Advertorial Notice */
    .listicle-advertorial-notice {
        font-family: var(--font-sans);
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--text-muted);
        text-align: center;
        padding: 8px 0;
        border-bottom: 1px solid var(--border);
        background: var(--bg);
    }

    /* Article Content */
    .listicle-article-content {
        padding-bottom: 40px;
    }

    .listicle-article-content p {
        font-size: 20px;
        font-weight: 450;
        line-height: 1.9;
        margin-bottom: 1.5em;
        color: var(--text-secondary);
        max-width: 60ch;
    }

    .listicle-article-content p strong {
        color: var(--text);
        font-weight: 700;
        background: linear-gradient(to bottom, transparent 60%, rgba(184, 92, 74, 0.12) 60%);
        padding: 0 2px;
    }

    .listicle-article-content p em {
        font-style: italic;
    }

    /* Content Card */
    .listicle-content-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 40px;
        margin: 40px 0;
        box-shadow: 0 2px 8px var(--shadow);
    }

    .listicle-content-card h2:first-child {
        margin-top: 0;
        padding-top: 0;
    }

    .listicle-content-card p:last-child {
        margin-bottom: 0;
    }

    /* Lead paragraph */
    .listicle-lead {
        font-size: 23px;
        line-height: 1.7;
        color: var(--text);
        margin-bottom: 28px;
        font-weight: 500;
    }

    /* Section Headers */
    .listicle-page h2 {
        font-family: var(--font-serif);
        font-size: clamp(28px, 4vw, 34px);
        font-weight: 700;
        line-height: 1.3;
        color: var(--text);
        margin: 48px 0 20px;
        padding-top: 16px;
        letter-spacing: -0.3px;
    }

    .listicle-page h2:first-of-type {
        margin-top: 32px;
    }

    /* Horizontal Rule */
    .listicle-section-break {
        border: none;
        height: 1px;
        background: var(--border);
        margin: 48px auto;
        max-width: 100px;
    }

    /* Pull Quote */
    .listicle-pull-quote {
        margin: 36px 0;
        padding: 28px 32px;
        background: var(--accent-light);
        border-left: 5px solid var(--accent);
        border-radius: 0 6px 6px 0;
    }

    .listicle-pull-quote p {
        font-size: 22px;
        font-style: italic;
        line-height: 1.6;
        color: var(--text);
        margin: 0;
    }

    .listicle-pull-quote cite {
        display: block;
        margin-top: 12px;
        font-family: var(--font-sans);
        font-size: 13px;
        font-style: normal;
        color: var(--accent);
    }

    /* The Cycle Box */
    .listicle-cycle-box {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 28px;
        margin: 36px 0;
        box-shadow: 0 2px 12px var(--shadow);
    }

    .listicle-cycle-title {
        font-family: var(--font-sans);
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--accent);
        margin-bottom: 20px;
        text-align: center;
    }

    .listicle-cycle-steps {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .listicle-cycle-step {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 16px 0;
        border-bottom: 1px dashed var(--border);
    }

    .listicle-cycle-step:last-child {
        border-bottom: none;
    }

    .listicle-cycle-num {
        width: 32px;
        height: 32px;
        background: var(--accent);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 14px;
        flex-shrink: 0;
    }

    .listicle-cycle-content h4 {
        font-family: var(--font-sans);
        font-size: 15px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 4px;
    }

    .listicle-cycle-content p {
        font-family: var(--font-sans);
        font-size: 14px;
        color: var(--text-muted);
        margin: 0;
        line-height: 1.5;
    }

    .listicle-cycle-bottom {
        margin-top: 20px;
        padding-top: 16px;
        border-top: 2px solid var(--accent);
        text-align: center;
    }

    .listicle-cycle-bottom p {
        font-family: var(--font-sans);
        font-size: 14px;
        font-weight: 600;
        color: var(--accent);
        margin: 0;
    }

    /* Key Insight Box */
    .listicle-insight-box {
        background: var(--sage-light);
        border: 1px solid var(--sage);
        border-radius: 8px;
        padding: 20px 24px;
        margin: 32px 0;
    }

    .listicle-insight-box p {
        font-size: 16px;
        line-height: 1.7;
        color: var(--text);
        margin: 0;
    }

    .listicle-insight-box strong {
        color: var(--sage);
    }

    /* Author Signature */
    .listicle-signature {
        margin: 48px 0 32px;
        text-align: left;
    }

    .listicle-signature-line {
        font-family: var(--font-hand);
        font-size: 32px;
        color: var(--text);
        margin-bottom: 8px;
    }

    .listicle-signature-bio {
        font-family: var(--font-sans);
        font-size: 13px;
        font-style: italic;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Comments Section */
    .listicle-comments-section {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 28px;
        margin: 48px 0;
        box-shadow: 0 2px 12px var(--shadow);
    }

    .listicle-comments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border);
        margin-bottom: 20px;
    }

    .listicle-comments-header h3 {
        font-family: var(--font-sans);
        font-size: 15px;
        font-weight: 600;
        color: var(--text);
    }

    .listicle-comments-count {
        font-family: var(--font-sans);
        font-size: 13px;
        color: var(--text-muted);
    }

    /* Comment Form */
    .listicle-comment-form {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--border);
    }

    .listicle-comment-form-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .listicle-comment-form-avatar svg {
        width: 18px;
        height: 18px;
        color: var(--text-muted);
    }

    .listicle-comment-form-input {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .listicle-comment-form-input input {
        font-family: var(--font-sans);
        font-size: 14px;
        padding: 10px 14px;
        border: 1px solid var(--border);
        border-radius: 6px;
        background: var(--bg);
        color: var(--text);
        outline: none;
        transition: border-color 0.2s;
    }

    .listicle-comment-form-input input:focus {
        border-color: var(--accent);
    }

    .listicle-comment-form-input input::placeholder {
        color: var(--text-muted);
    }

    .listicle-comment-form-submit {
        font-family: var(--font-sans);
        font-size: 13px;
        font-weight: 600;
        padding: 8px 16px;
        background: var(--accent);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        align-self: flex-start;
        transition: background 0.2s;
    }

    .listicle-comment-form-submit:hover {
        background: #a54d3d;
    }

    .listicle-comment-success {
        display: none;
        font-family: var(--font-sans);
        font-size: 14px;
        color: var(--sage);
        padding: 12px 16px;
        background: var(--sage-light);
        border-radius: 6px;
        margin-bottom: 20px;
        text-align: center;
    }

    .listicle-comment-success.show {
        display: block;
    }

    .listicle-comment {
        padding: 16px 0;
        border-bottom: 1px solid var(--border);
    }

    .listicle-comment:last-of-type {
        border-bottom: none;
        padding-bottom: 0;
    }

    .listicle-comment-body {
        flex: 1;
    }

    .listicle-comment-name {
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 14px;
        color: var(--text);
    }

    .listicle-comment-text {
        font-size: 15px;
        color: var(--text-secondary);
        margin: 6px 0 10px;
        line-height: 1.6;
    }

    .listicle-comment-actions {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .listicle-comment-meta {
        font-family: var(--font-sans);
        font-size: 12px;
        color: var(--text-muted);
    }

    .listicle-like-btn {
        display: flex;
        align-items: center;
        gap: 5px;
        font-family: var(--font-sans);
        font-size: 12px;
        color: var(--text-muted);
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        border-radius: 4px;
        transition: all 0.2s;
    }

    .listicle-like-btn:hover {
        background: var(--accent-light);
        color: var(--accent);
    }

    .listicle-like-btn.liked {
        color: var(--accent);
    }

    .listicle-like-btn svg {
        width: 14px;
        height: 14px;
    }

    /* CTA Box */
    .listicle-cta-box {
        background: var(--bg-card);
        border: 2px solid #a3242f;
        border-radius: 8px;
        padding: 32px;
        text-align: center;
        margin: 48px 0;
        box-shadow: 0 4px 20px var(--shadow);
    }

    .listicle-cta-box h3 {
        font-family: var(--font-serif);
        font-size: 22px;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 12px;
    }

    .listicle-cta-box p {
        font-size: 16px;
        color: var(--text-secondary);
        margin-bottom: 20px;
        max-width: 480px;
        margin-left: auto;
        margin-right: auto;
    }

    .listicle-cta-box .listicle-article-image {
        max-width: 280px;
        margin: 0 auto 1rem;
    }

    .listicle-cta-box .listicle-article-image img {
        object-fit: contain;
        object-position: center center;
        max-height: 300px;
        width: auto;
        margin: 0 auto;
    }

    .listicle-cta-button {
        display: inline-block;
        background: #a3242f;
        color: white;
        padding: 16px 40px;
        text-decoration: none;
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(163, 36, 47, 0.2);
    }

    .listicle-cta-button:hover {
        background: #8a1e28;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(163, 36, 47, 0.3);
    }

    .listicle-cta-note {
        font-family: var(--font-sans);
        font-size: 12px;
        color: var(--text-muted);
        margin-top: 12px;
    }

    /* Sticky CTA */
    .listicle-sticky-cta {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: var(--bg-card);
        border-top: 1px solid var(--border);
        padding: 12px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        z-index: 100;
        transform: translateY(100%);
        transition: transform 0.3s ease;
        box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
    }

    .listicle-sticky-cta.visible {
        transform: translateY(0);
    }

    .listicle-sticky-cta-text {
        font-family: var(--font-sans);
        font-size: 14px;
        color: var(--text-secondary);
        display: none;
    }

    @media (min-width: 600px) {
        .listicle-sticky-cta-text {
            display: block;
        }
    }

    .listicle-sticky-cta .listicle-cta-button {
        padding: 12px 24px;
        font-size: 14px;
    }

    /* Footer */
    .listicle-footer {
        padding: 40px 0;
        text-align: center;
        border-top: 1px solid var(--border);
        margin-top: 48px;
    }

    .listicle-footer p {
        font-family: var(--font-sans);
        font-size: 12px;
        color: var(--text-muted);
        line-height: 1.8;
        margin-bottom: 8px;
    }

    .listicle-footer p:last-child {
        margin-bottom: 0;
    }

    /* Animations */
    @keyframes listicleFadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .listicle-article-header {
        animation: listicleFadeInUp 0.6s ease-out;
    }

    .listicle-byline {
        animation: listicleFadeInUp 0.6s ease-out 0.1s both;
    }

    .listicle-hero-image {
        animation: listicleFadeInUp 0.6s ease-out 0.2s both;
    }

    /* Mobile adjustments */
    @media (max-width: 600px) {
        .listicle-page {
            font-size: 19px;
            line-height: 1.75;
        }

        .listicle-container {
            padding: 0 18px;
        }

        .listicle-page h1 {
            font-size: 30px;
            line-height: 1.25;
        }

        .listicle-page h2 {
            font-size: 26px;
            margin: 36px 0 16px;
        }

        .listicle-article-subtitle {
            font-size: 17px;
        }

        .listicle-lead {
            font-size: 19px;
        }

        .listicle-content-card {
            padding: 24px 20px;
            margin: 24px 0;
        }

        .listicle-pull-quote {
            padding: 20px 22px;
            margin: 28px 0;
        }

        .listicle-pull-quote p {
            font-size: 19px;
        }

        .listicle-article-content p {
            font-size: 19px;
        }

        .listicle-cycle-box,
        .listicle-comments-section,
        .listicle-cta-box {
            padding: 20px;
            margin-left: -4px;
            margin-right: -4px;
        }

        .listicle-cycle-step {
            padding: 12px 0;
        }

        .listicle-article-image {
            margin: 20px 0;
        }

        .listicle-article-image figcaption {
            font-size: 12px;
            padding: 8px 0;
        }

        .listicle-comment-form {
            flex-direction: column;
        }

        .listicle-comment-form-avatar {
            display: none;
        }

        .listicle-signature-line {
            font-size: 28px;
        }

        .listicle-cta-box h3 {
            font-size: 20px;
        }

        .listicle-cta-button {
            display: block;
            width: 100%;
            padding: 16px 24px;
            font-size: 15px;
            text-align: center;
        }

        .listicle-cycle-num {
            width: 28px;
            height: 28px;
            font-size: 13px;
        }

        .listicle-insight-box {
            padding: 18px 20px;
        }

        .listicle-insight-box p {
            font-size: 15px;
        }
    }
</style>

