{{ 'section-adv-text-image.css' | asset_url | stylesheet_tag }}

<div class="adv-text-image-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="adv-text-image-content">
      
      {%- if section.settings.section_heading != blank -%}
        <h2 class="adv-section-heading">{{ section.settings.section_heading }}</h2>
      {%- endif -%}

      {%- if section.settings.section_subheading != blank -%}
        <div class="adv-section-subheading">{{ section.settings.section_subheading }}</div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        {%- comment -%} Using Blocks System {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text_image_block' -%}
              <div class="adv-text-image-block adv-layout-{{ block.settings.layout }} adv-align-{{ block.settings.vertical_alignment }}" {{ block.shopify_attributes }}>
                
                {%- if block.settings.layout == 'text-only' -%}
                  {%- if block.settings.text_content != blank -%}
                    <div class="adv-text-column" style="flex: 1; max-width: 100%;">
                      {%- if block.settings.block_headline != blank -%}
                        <h3 class="adv-block-headline">{{ block.settings.block_headline }}</h3>
                      {%- endif -%}
                      <div class="adv-text-content">
                        {{ block.settings.text_content }}
                      </div>
                    </div>
                  {%- endif -%}
                {%- elsif block.settings.layout == 'image-left' -%}
                  {%- if block.settings.image -%}
                    <div class="adv-image-column">
                      <div class="adv-image-container">
                        <img
                          src="{{ block.settings.image | image_url: width: 1000 }}"
                          alt="{{ block.settings.image.alt | default: 'Image' }}"
                          width="{{ block.settings.image.width }}"
                          height="{{ block.settings.image.height }}"
                          loading="lazy"
                        >
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.text_content != blank -%}
                    <div class="adv-text-column">
                      {%- if block.settings.block_headline != blank -%}
                        <h3 class="adv-block-headline">{{ block.settings.block_headline }}</h3>
                      {%- endif -%}
                      <div class="adv-text-content">
                        {{ block.settings.text_content }}
                      </div>
                    </div>
                  {%- endif -%}
                {%- else -%}
                  {%- if block.settings.text_content != blank -%}
                    <div class="adv-text-column">
                      {%- if block.settings.block_headline != blank -%}
                        <h3 class="adv-block-headline">{{ block.settings.block_headline }}</h3>
                      {%- endif -%}
                      <div class="adv-text-content">
                        {{ block.settings.text_content }}
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.image -%}
                    <div class="adv-image-column">
                      <div class="adv-image-container">
                        <img
                          src="{{ block.settings.image | image_url: width: 1000 }}"
                          alt="{{ block.settings.image.alt | default: 'Image' }}"
                          width="{{ block.settings.image.width }}"
                          height="{{ block.settings.image.height }}"
                          loading="lazy"
                        >
                      </div>
                    </div>
                  {%- endif -%}
                {%- endif -%}

              </div>
            {%- when 'text_conclusion' -%}
              {%- if block.settings.conclusion_text != blank -%}
                <div class="adv-text-conclusion-block" {{ block.shopify_attributes }}>
                  <div class="adv-text-conclusion">
                    {{ block.settings.conclusion_text }}
                  </div>
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Using Section-Level Settings (for backward compatibility) {%- endcomment -%}
        <div class="adv-text-image-block adv-layout-{{ section.settings.layout }}">
          
          {%- if section.settings.layout == 'text-only' -%}
            {%- if section.settings.content != blank -%}
              <div class="adv-text-column" style="flex: 1; max-width: 100%;">
                <div class="adv-text-content">
                  {{ section.settings.content }}
                </div>
              </div>
            {%- endif -%}
          {%- elsif section.settings.layout == 'image-left' -%}
            {%- if section.settings.image -%}
              <div class="adv-image-column">
                <div class="adv-image-container">
                  <img
                    src="{{ section.settings.image | image_url: width: 1000 }}"
                    alt="{{ section.settings.image.alt | default: 'Image' }}"
                    width="{{ section.settings.image.width }}"
                    height="{{ section.settings.image.height }}"
                    loading="lazy"
                  >
                </div>
              </div>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="adv-text-column">
                <div class="adv-text-content">
                  {{ section.settings.content }}
                </div>
              </div>
            {%- endif -%}
          {%- else -%}
            {%- if section.settings.content != blank -%}
              <div class="adv-text-column">
                <div class="adv-text-content">
                  {{ section.settings.content }}
                </div>
              </div>
            {%- endif -%}

            {%- if section.settings.image -%}
              <div class="adv-image-column">
                <div class="adv-image-container">
                  <img
                    src="{{ section.settings.image | image_url: width: 1000 }}"
                    alt="{{ section.settings.image.alt | default: 'Image' }}"
                    width="{{ section.settings.image.width }}"
                    height="{{ section.settings.image.height }}"
                    loading="lazy"
                  >
                </div>
              </div>
            {%- endif -%}
          {%- endif -%}

        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .adv-text-image-wrapper {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .adv-text-image-content {
    max-width: {{ section.settings.content_width }}px;
