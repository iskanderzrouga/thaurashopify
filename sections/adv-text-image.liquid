    font-size: {{ section.settings.subheading_size }}px;
    font-weight: 400 !important;
    line-height: 1.3 !important;
    color: {{ section.settings.subheading_color }};
    margin: {{ section.settings.subheading_margin }}px 0 0 0;
    width: 100%;
    text-align: left;
  }

  .adv-section-subheading p {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: 400 !important;
    line-height: 1.3 !important;
    color: {{ section.settings.subheading_color }};
    margin: 0;
  }

  .adv-text-image-block {
    display: flex;
    gap: {{ section.settings.block_gap }}px;
    align-items: flex-start;
    width: 100%;
  }

  /* Vertical Alignment Options */
  .adv-text-image-block.adv-align-start {
    align-items: flex-start;
  }

  .adv-text-image-block.adv-align-center {
    align-items: center;
  }

  .adv-text-image-block.adv-align-end {
    align-items: flex-end;
  }

  /* Image Left Layout */
  .adv-text-image-block.adv-layout-image-left {
    flex-direction: row;
  }

  /* Image Right Layout */
  .adv-text-image-block.adv-layout-image-right {
    flex-direction: row;
  }

  /* Text Only Layout */
  .adv-text-image-block.adv-layout-text-only {
    flex-direction: column;
  }

  .adv-text-image-block.adv-layout-text-only .adv-text-column {
    flex: 1;
    max-width: 100%;
  }

  .adv-image-column {
    flex: 0 0 {{ section.settings.image_column_width }}px;
    width: {{ section.settings.image_column_width }}px;
  }

  .adv-image-container {
    width: 100%;
    border-radius: {{ section.settings.image_radius }}px;
    overflow: hidden;
  }

  .adv-image-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  .adv-text-column {
    flex: 1;
    min-width: 0;
  }

  .adv-text-content {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.text_size }}px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.4 !important;
    color: {{ section.settings.text_color }};
  }

  .adv-text-content p {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.text_size }}px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.4 !important;
    color: {{ section.settings.text_color }};
    margin-bottom: 1em;
  }

  .adv-text-content p:last-child {
    margin-bottom: 0;
  }

  /* Block Headline */
  .adv-block-headline {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.block_headline_size }}px;
    font-weight: 700 !important;
    line-height: 1.2 !important;
    color: {{ section.settings.block_headline_color }};
    margin: 0 0 {{ section.settings.block_headline_margin }}px 0;
    text-align: left;
  }

  /* Text Conclusion Block */
  .adv-text-conclusion-block {
    width: 100%;
  }

  .adv-text-conclusion {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.text_size }}px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.4 !important;
    color: {{ section.settings.text_color }};
    text-align: left;
    max-width: 800px;
    margin: 0;
  }

  .adv-text-conclusion p {
    font-family: 'Open Sans', sans-serif !important;
    font-size: {{ section.settings.text_size }}px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.4 !important;
    color: {{ section.settings.text_color }};
    margin-bottom: 1em;
  }

  .adv-text-conclusion p:last-child {
    margin-bottom: 0;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .adv-text-image-wrapper {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .adv-text-image-content {
      gap: {{ section.settings.mobile_section_gap }}px;
    }

    .adv-section-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
      line-height: 1.2;
    }

    .adv-section-subheading {
      font-size: {{ section.settings.mobile_subheading_size }}px !important;
      line-height: 1.3 !important;
      margin: {{ section.settings.mobile_subheading_margin }}px 0 0 0 !important;
    }

    .adv-section-subheading p {
      font-size: {{ section.settings.mobile_subheading_size }}px !important;
      line-height: 1.3 !important;
    }

    /* Block Headline Mobile */
    .adv-block-headline {
      font-size: {{ section.settings.mobile_block_headline_size }}px !important;
      margin: 0 0 {{ section.settings.mobile_block_headline_margin }}px 0 !important;
    }

    .adv-text-image-block {
      flex-direction: column !important;
      gap: {{ section.settings.mobile_block_gap }}px;
    }

    /* Force image to always be first on mobile */
    .adv-text-image-block.adv-layout-image-right {
      flex-direction: column !important;
    }

    .adv-text-image-block.adv-layout-image-right .adv-image-column {
      order: 1;
    }

    .adv-text-image-block.adv-layout-image-right .adv-text-column {
      order: 2;
    }

    .adv-image-column {
      flex: 1 1 auto;
      width: 100%;
    }

    .adv-text-column {
      width: 100%;
    }

    .adv-text-content {
      font-family: 'Open Sans', sans-serif !important;
      font-size: {{ section.settings.mobile_text_size }}px !important;
      font-weight: 400 !important;
      font-style: normal !important;
      line-height: 1.4 !important;
      color: {{ section.settings.text_color }};
    }

    .adv-text-content p {
      font-family: 'Open Sans', sans-serif !important;
      font-size: {{ section.settings.mobile_text_size }}px !important;
      font-weight: 400 !important;
      font-style: normal !important;
      line-height: 1.4 !important;
      color: {{ section.settings.text_color }};
      margin-bottom: 1em;
    }

    .adv-text-content p:last-child {
      margin-bottom: 0;
    }

    /* Text Conclusion Mobile */
    .adv-text-conclusion {
      font-family: 'Open Sans', sans-serif !important;
      font-size: {{ section.settings.mobile_text_size }}px !important;
      font-weight: 400 !important;
      font-style: normal !important;
      line-height: 1.4 !important;
